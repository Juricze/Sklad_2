<ContentDialog
    x:Class="Sklad_2.Views.Dialogs.ReceiptPreviewDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Sklad_2.Models"
    xmlns:converters="using:Sklad_2.Converters"
    mc:Ignorable="d"
    Title="Náhled účtenky"
    CloseButtonText="Zavřít"
    PrimaryButtonText="Tisk"
    DefaultButton="Close"
    PrimaryButtonClick="PrintButton_Click">

    <ContentDialog.Resources>
        <converters:PaymentMethodToVisibilityConverter x:Key="PaymentMethodToVisibilityConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:CurrencyConverter x:Key="CurrencyConverter"/>
    </ContentDialog.Resources>

    <!-- Receipt-like styling: narrow, monospace feel -->
    <Border Background="White" Padding="16" CornerRadius="4" BorderBrush="#CCCCCC" BorderThickness="1">
        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="550">
            <StackPanel Width="320" Spacing="0">

                <!-- === HEADER === -->
                <TextBlock Text="{x:Bind Receipt.ShopName, Mode=OneWay}"
                           FontWeight="Bold" FontSize="16"
                           HorizontalAlignment="Center" TextAlignment="Center"/>
                <TextBlock Text="{x:Bind Receipt.ShopAddress, Mode=OneWay}"
                           FontSize="12" Foreground="#666666"
                           HorizontalAlignment="Center" TextAlignment="Center"
                           TextWrapping="Wrap" Margin="0,2,0,0"/>
                <TextBlock FontSize="12" HorizontalAlignment="Center" Margin="0,4,0,0">
                    <Run Text="IČ: "/><Run Text="{x:Bind Receipt.CompanyId, Mode=OneWay}"/>
                </TextBlock>
                <TextBlock FontSize="12" HorizontalAlignment="Center"
                           Visibility="{x:Bind Receipt.IsVatPayer, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Run Text="DIČ: "/><Run Text="{x:Bind Receipt.VatId, Mode=OneWay}"/>
                </TextBlock>

                <!-- Separator -->
                <TextBlock Text="════════════════════════════════════"
                           FontFamily="Consolas" FontSize="10"
                           HorizontalAlignment="Center" Margin="0,8,0,8"
                           Foreground="#999999"/>

                <!-- === STORNO WARNING === -->
                <Border Background="#FFEBEE" CornerRadius="4" Padding="8" Margin="0,0,0,8"
                        Visibility="{x:Bind Receipt.IsStorno, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="*** STORNO ***" FontWeight="Bold" Foreground="#D32F2F" HorizontalAlignment="Center"/>
                        <TextBlock FontSize="11" Foreground="#D32F2F" HorizontalAlignment="Center">
                            <Run Text="Storno účtenky č. "/><Run Text="{x:Bind Receipt.OriginalReceiptId, Mode=OneWay}"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- === DOCUMENT TYPE === -->
                <TextBlock Text="ÚČTENKA" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center"/>
                <TextBlock Text="DAŇOVÝ DOKLAD" FontSize="11" HorizontalAlignment="Center" Foreground="#666666"
                           Visibility="{x:Bind Receipt.IsVatPayer, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <!-- === RECEIPT INFO === -->
                <Grid Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" FontSize="11">
                        <Run Text="Č. "/><Run Text="{x:Bind Receipt.FormattedReceiptNumber, Mode=OneWay}" FontWeight="SemiBold"/>
                    </TextBlock>
                    <TextBlock Grid.Column="1" FontSize="11" Text="{x:Bind Receipt.SaleDateFormatted, Mode=OneWay}"/>
                </Grid>
                <TextBlock FontSize="11" Margin="0,2,0,0">
                    <Run Text="Prodavač: "/><Run Text="{x:Bind Receipt.SellerName, Mode=OneWay}"/>
                </TextBlock>

                <!-- Separator -->
                <TextBlock Text="────────────────────────────────────"
                           FontFamily="Consolas" FontSize="10"
                           HorizontalAlignment="Center" Margin="0,8,0,8"
                           Foreground="#999999"/>

                <!-- === ITEMS === -->
                <ItemsRepeater ItemsSource="{x:Bind Receipt.Items, Mode=OneWay}">
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate x:DataType="models:ReceiptItem">
                            <StackPanel Margin="0,0,0,6">
                                <!-- Product name -->
                                <TextBlock Text="{x:Bind ProductName}" FontSize="12" TextWrapping="Wrap"/>
                                <!-- Quantity x Price = Total -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" FontSize="11" Foreground="#666666">
                                        <Run Text="  "/><Run Text="{x:Bind Quantity}"/><Run Text=" x "/><Run Text="{x:Bind UnitPriceFormatted, Mode=OneWay}"/>
                                    </TextBlock>
                                    <TextBlock Grid.Column="1" Text="{x:Bind TotalPriceFormatted, Mode=OneWay}"
                                               FontSize="12" FontWeight="SemiBold"/>
                                </Grid>
                                <!-- Discount info -->
                                <TextBlock FontSize="10" Foreground="#FF9800" Margin="8,0,0,0"
                                           Visibility="{x:Bind HasDiscount, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <Run Text="Sleva "/><Run Text="{x:Bind DiscountPercentFormatted, Mode=OneWay}"/>
                                    <Run Text=" z "/><Run Text="{x:Bind OriginalUnitPriceFormatted, Mode=OneWay}"/>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>

                <!-- Double separator -->
                <TextBlock Text="════════════════════════════════════"
                           FontFamily="Consolas" FontSize="10"
                           HorizontalAlignment="Center" Margin="0,8,0,8"
                           Foreground="#999999"/>

                <!-- === DISCOUNTS SECTION (Loyalty + Gift Card) === -->
                <StackPanel Visibility="{x:Bind Receipt.HasAnyDiscount, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <!-- Mezisoučet (only if there's any discount) -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Mezisoučet:" FontSize="12"/>
                        <TextBlock Grid.Column="1" Text="{x:Bind Receipt.TotalAmountFormatted, Mode=OneWay}" FontSize="12"/>
                    </Grid>

                    <!-- Loyalty discount -->
                    <StackPanel Visibility="{x:Bind Receipt.HasLoyaltyDiscount, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid Margin="0,4,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" FontSize="12" FontWeight="SemiBold" Foreground="#007AFF">
                                <Run Text="Věrnostní sleva ("/><Run Text="{x:Bind Receipt.LoyaltyDiscountPercent, Mode=OneWay}"/><Run Text="%)"/>
                            </TextBlock>
                            <TextBlock Grid.Column="1" Text="{x:Bind Receipt.LoyaltyDiscountAmountFormatted, Mode=OneWay}"
                                       FontSize="12" FontWeight="SemiBold" Foreground="#007AFF"/>
                        </Grid>
                        <TextBlock FontSize="10" Foreground="#666666" Margin="0,2,0,0"
                                   Visibility="{x:Bind Receipt.HasLoyaltyCustomerEmail, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Run Text="Člen: "/><Run Text="{x:Bind Receipt.LoyaltyCustomerEmail, Mode=OneWay}"/>
                        </TextBlock>
                    </StackPanel>

                    <!-- Gift card redemption -->
                    <StackPanel Visibility="{x:Bind Receipt.ContainsGiftCardRedemption, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid Margin="0,4,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Použité poukazy:" FontSize="12" FontWeight="SemiBold" Foreground="#4CAF50"/>
                            <TextBlock Grid.Column="1" FontSize="12" FontWeight="SemiBold" Foreground="#4CAF50">
                                <Run Text="-"/><Run Text="{x:Bind Receipt.GiftCardRedemptionAmountFormatted, Mode=OneWay}"/>
                            </TextBlock>
                        </Grid>

                        <!-- Seznam uplatněných poukazů -->
                        <ItemsControl ItemsSource="{x:Bind Receipt.RedeemedGiftCards, Mode=OneWay}" Margin="0,4,0,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="models:ReceiptGiftCardRedemption">
                                    <TextBlock FontSize="10" Foreground="#666666" Margin="0,1,0,0">
                                        <Run Text="EAN: "/><Run Text="{x:Bind GiftCardEan, Mode=OneTime}"/>
                                        <Run Text=" ("/><Run Text="{x:Bind RedeemedAmount, Mode=OneTime}"/><Run Text=" Kč)"/>
                                    </TextBlock>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Separator -->
                    <TextBlock Text="────────────────────────────────────"
                               FontFamily="Consolas" FontSize="10"
                               HorizontalAlignment="Center" Margin="0,8,0,8"
                               Foreground="#999999"/>
                </StackPanel>

                <!-- === VAT SUMMARY (only for VAT payers) === -->
                <StackPanel Visibility="{x:Bind Receipt.IsVatPayer, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Margin="0,0,0,8">
                    <TextBlock Text="DPH:" FontSize="11" FontWeight="SemiBold"/>
                    <ItemsRepeater ItemsSource="{x:Bind VatSummaries, Mode=OneWay}" Margin="8,4,0,0">
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate x:DataType="models:VatSummary">
                                <Grid Margin="0,2,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{x:Bind VatRateFormatted, Mode=OneWay}" FontSize="10"/>
                                    <TextBlock Grid.Column="1" FontSize="10">
                                        <Run Text="Základ: "/><Run Text="{x:Bind TotalAmountWithoutVatFormatted, Mode=OneWay}"/>
                                    </TextBlock>
                                    <TextBlock Grid.Column="2" FontSize="10">
                                        <Run Text="DPH: "/><Run Text="{x:Bind TotalVatAmountFormatted, Mode=OneWay}"/>
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                    <!-- Separator -->
                    <TextBlock Text="────────────────────────────────────"
                               FontFamily="Consolas" FontSize="10"
                               HorizontalAlignment="Center" Margin="0,8,0,0"
                               Foreground="#999999"/>
                </StackPanel>

                <!-- === TOTAL === -->
                <!-- Precise amount (with haléře) -->
                <Grid Margin="0,0,0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Celkem (přesně):" FontSize="12"/>
                    <TextBlock Grid.Column="1" Text="{x:Bind Receipt.AmountToPayFormatted, Mode=OneWay}" FontSize="12"/>
                </Grid>

                <!-- Rounding (if any) -->
                <Grid Margin="0,0,0,4"
                      Visibility="{x:Bind Receipt.HasRounding, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Zaokrouhlení:" FontSize="11" Foreground="#666666"/>
                    <TextBlock Grid.Column="1" Text="{x:Bind Receipt.RoundingAmountFormatted, Mode=OneWay}"
                               FontSize="11" Foreground="#666666"/>
                </Grid>

                <!-- Final rounded amount to pay -->
                <Grid Margin="0,4,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="K ÚHRADĚ:" FontSize="16" FontWeight="Bold"/>
                    <TextBlock Grid.Column="1" Text="{x:Bind Receipt.FinalAmountRoundedFormatted, Mode=OneWay}"
                               FontSize="16" FontWeight="Bold"/>
                </Grid>

                <!-- === PAYMENT === -->
                <TextBlock Text="────────────────────────────────────"
                           FontFamily="Consolas" FontSize="10"
                           HorizontalAlignment="Center" Margin="0,8,0,8"
                           Foreground="#999999"/>

                <TextBlock FontSize="12" Margin="0,0,0,4">
                    <Run Text="Platba: "/><Run Text="{x:Bind Receipt.PaymentMethod, Mode=OneWay}" FontWeight="SemiBold"/>
                </TextBlock>

                <!-- Cash payment details -->
                <StackPanel Visibility="{x:Bind Receipt.PaymentMethod, Mode=OneWay, Converter={StaticResource PaymentMethodToVisibilityConverter}, ConverterParameter='Hotově'}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Přijato:" FontSize="11"/>
                        <TextBlock Grid.Column="1" Text="{x:Bind ReceivedAmount, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" FontSize="11"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Vráceno:" FontSize="11"/>
                        <TextBlock Grid.Column="1" Text="{x:Bind ChangeAmount, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" FontSize="11"/>
                    </Grid>
                </StackPanel>

                <!-- Separator -->
                <TextBlock Text="════════════════════════════════════"
                           FontFamily="Consolas" FontSize="10"
                           HorizontalAlignment="Center" Margin="0,12,0,8"
                           Foreground="#999999"/>

                <!-- === FOOTER === -->
                <TextBlock Text="Děkujeme za nákup!"
                           FontSize="12" HorizontalAlignment="Center"
                           FontStyle="Italic" Foreground="#666666"/>

            </StackPanel>
        </ScrollViewer>
    </Border>
</ContentDialog>
