<ContentDialog
    x:Class="Sklad_2.Views.Dialogs.ReceiptPreviewDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Sklad_2.Models"
    xmlns:converters="using:Sklad_2.Converters"
    xmlns:dialogs="using:Sklad_2.Views.Dialogs"
    mc:Ignorable="d"
    Title="Náhled účtenky"
    CloseButtonText="Zavřít"
    PrimaryButtonText="Tisk"
    DefaultButton="Close"
    PrimaryButtonClick="PrintButton_Click">

    <ContentDialog.Resources>
        <converters:PaymentMethodToVisibilityConverter x:Key="PaymentMethodToVisibilityConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </ContentDialog.Resources>

    <StackPanel Spacing="16" MinWidth="400">
        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="500">
            <StackPanel Spacing="16">
                <!-- Hlavička -->
                <StackPanel HorizontalAlignment="Center" Spacing="4">
                    <TextBlock Text="{x:Bind Receipt.ShopName, Mode=OneWay}" Style="{ThemeResource TitleTextBlockStyle}" HorizontalAlignment="Center"/>
                    <TextBlock Text="{x:Bind Receipt.ShopAddress, Mode=OneWay}" HorizontalAlignment="Center"/>
                    <TextBlock HorizontalAlignment="Center">
                        <Run Text="IČ: "/><Run Text="{x:Bind Receipt.CompanyId, Mode=OneWay}"/>
                    </TextBlock>
                    <TextBlock HorizontalAlignment="Center" Visibility="{x:Bind Receipt.IsVatPayer, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Run Text="DIČ: "/><Run Text="{x:Bind Receipt.VatId, Mode=OneWay}"/>
                    </TextBlock>
                </StackPanel>

                <Rectangle Height="1" Fill="{ThemeResource CardStrokeColorDefaultBrush}"/>

                <!-- Informace o dokladu -->
                <StackPanel HorizontalAlignment="Center" Spacing="0">
                    <TextBlock Text="ÚČTENKA" Style="{ThemeResource SubtitleTextBlockStyle}" HorizontalAlignment="Center"/>
                    <TextBlock Text="DAŇOVÝ DOKLAD" Style="{ThemeResource CaptionTextBlockStyle}" HorizontalAlignment="Center"
                               Visibility="{x:Bind Receipt.IsVatPayer, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0">
                        <Run Text="Číslo dokladu: "/><Run Text="{x:Bind Receipt.FormattedReceiptNumber, Mode=OneWay}"/>
                    </TextBlock>
                    <TextBlock Grid.Column="1" HorizontalAlignment="Right">
                        <Run Text="Datum: "/><Run Text="{x:Bind Receipt.SaleDateFormatted, Mode=OneWay}"/>
                    </TextBlock>
                </Grid>

                <Rectangle Height="1" Fill="{ThemeResource CardStrokeColorDefaultBrush}"/>

                <!-- Položky -->
                <Grid Padding="8" Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Položka" FontWeight="Bold"/>
                    <TextBlock Grid.Column="1" Text="Sazba DPH" FontWeight="Bold" Margin="12,0"
                               Visibility="{x:Bind Receipt.IsVatPayer, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <TextBlock Grid.Column="2" Text="Celkem" FontWeight="Bold" HorizontalAlignment="Right"/>
                </Grid>
                <ItemsRepeater ItemsSource="{x:Bind Receipt.Items, Mode=OneWay}">
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate x:DataType="models:ReceiptItem">
                            <StackPanel Padding="8">
                                <Grid ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{x:Bind ProductName}"/>
                                    <TextBlock Grid.Column="1" Text="{x:Bind VatRateFormatted, Mode=OneWay}"
                                               Visibility="{Binding Receipt.IsVatPayer, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    <TextBlock Grid.Column="2" Text="{x:Bind TotalPriceFormatted, Mode=OneWay}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                </Grid>
                                <TextBlock Style="{ThemeResource CaptionTextBlockStyle}">
                                    <Run Text="{x:Bind Quantity}"/><Run Text=" ks x "/><Run Text="{x:Bind UnitPriceFormatted, Mode=OneWay}"/>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>

                <Rectangle Height="1" Fill="{ThemeResource CardStrokeColorDefaultBrush}"/>

                <!-- Souhrn DPH -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Spacing="4"
                                Visibility="{x:Bind Receipt.IsVatPayer, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="Souhrn DPH" FontWeight="Bold"/>
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Sazba"/>
                            <TextBlock Grid.Column="1" Text="Základ" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Column="2" Text="DPH" HorizontalAlignment="Right"/>
                        </Grid>
                        <ItemsRepeater ItemsSource="{x:Bind VatSummaries, Mode=OneWay}">
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate x:DataType="models:VatSummary">
                                    <Grid ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{x:Bind VatRateFormatted, Mode=OneWay}"/>
                                        <TextBlock Grid.Column="1" Text="{x:Bind TotalAmountWithoutVatFormatted, Mode=OneWay}" HorizontalAlignment="Right"/>
                                        <TextBlock Grid.Column="2" Text="{x:Bind TotalVatAmountFormatted, Mode=OneWay}" HorizontalAlignment="Right"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                    </StackPanel>

                    <!-- Celkem -->
                    <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                        <TextBlock Text="CELKEM UHRAZENO" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                        <TextBlock Text="{x:Bind Receipt.TotalAmountFormatted, Mode=OneWay}" Style="{ThemeResource TitleTextBlockStyle}" HorizontalAlignment="Right"/>

                        <TextBlock Text="HRAZENO KARTOU" Style="{ThemeResource SubtitleTextBlockStyle}" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,12,0,0"
                                   Visibility="{x:Bind Receipt.PaymentMethod, Mode=OneWay, Converter={StaticResource PaymentMethodToVisibilityConverter}, ConverterParameter='Kartou'}"/>

                        <StackPanel Visibility="{x:Bind Receipt.PaymentMethod, Mode=OneWay, Converter={StaticResource PaymentMethodToVisibilityConverter}, ConverterParameter='Hotově'}">
                            <TextBlock Text="Obdržená hotovost:" Style="{ThemeResource CaptionTextBlockStyle}" Margin="0,12,0,0" HorizontalAlignment="Right"/>
                            <TextBlock Text="{x:Bind ReceivedAmount, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" Style="{ThemeResource SubtitleTextBlockStyle}" HorizontalAlignment="Right"/>

                            <TextBlock Text="Vráceno:" Style="{ThemeResource CaptionTextBlockStyle}" Margin="0,4,0,0" HorizontalAlignment="Right"/>
                            <TextBlock Text="{x:Bind ChangeAmount, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" Style="{ThemeResource SubtitleTextBlockStyle}" HorizontalAlignment="Right"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </StackPanel>
</ContentDialog>