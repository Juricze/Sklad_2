<ContentDialog
    x:Class="Sklad_2.Views.Dialogs.PaymentSelectionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:Sklad_2.Converters"
    mc:Ignorable="d"
    Title="Vyberte způsob platby"
    CloseButtonText="Zrušit">

    <StackPanel Spacing="24" MinWidth="300">
        <TextBlock Text="Celkem k úhradě:" Style="{ThemeResource SubtitleTextBlockStyle}"/>
        <TextBlock Text="{x:Bind GrandTotal, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" Style="{ThemeResource TitleTextBlockStyle}" FontWeight="Bold"/>

        <StackPanel Spacing="12" HorizontalAlignment="Center">
            <Button Content="Hotově" Click="CashButton_Click" Style="{StaticResource AccentButtonStyle}" MinWidth="200"/>
            <Button Content="Kartou" Click="CardButton_Click" Style="{StaticResource AccentButtonStyle}" MinWidth="200"/>
        </StackPanel>
    </StackPanel>
</ContentDialog>