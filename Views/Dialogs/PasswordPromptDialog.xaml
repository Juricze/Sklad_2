<ContentDialog
    x:Class="Sklad_2.Views.Dialogs.PasswordPromptDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Zadejte heslo"
    PrimaryButtonText="Potvrdit"
    CloseButtonText="Zrušit"
    DefaultButton="Primary">

    <StackPanel Spacing="12" MinWidth="300">
        <TextBlock x:Name="PromptText" Text="Pro pokračování zadejte heslo:" TextWrapping="Wrap"/>
        <PasswordBox x:Name="PasswordInputBox" Password=""/>
        <TextBlock x:Name="ErrorText" Foreground="{ThemeResource SystemFillColorCriticalBrush}" TextWrapping="Wrap" Margin="0,8,0,0"/>
    </StackPanel>
</ContentDialog>
