<ContentDialog
    x:Class="Sklad_2.Views.Dialogs.AddEditUserDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Uživatel"
    PrimaryButtonText="Uložit"
    CloseButtonText="Zrušit"
    DefaultButton="Primary"
    PrimaryButtonClick="PrimaryButton_Click">

    <StackPanel Spacing="12" MinWidth="400">
        <!-- Username -->
        <TextBox x:Name="UsernameTextBox"
                 Header="Uživatelské jméno (login)"
                 PlaceholderText="např. jan.novak"
                 TextChanged="TextBox_TextChanged"/>

        <!-- Display Name -->
        <TextBox x:Name="DisplayNameTextBox"
                 Header="Zobrazované jméno"
                 PlaceholderText="např. Jan Novák"
                 TextChanged="TextBox_TextChanged"/>

        <!-- Role Selection -->
        <ComboBox x:Name="RoleComboBox"
                  Header="Role"
                  PlaceholderText="Vyberte roli"
                  SelectedIndex="0">
            <ComboBoxItem Content="Administrátor" Tag="Admin"/>
            <ComboBoxItem Content="Prodavač" Tag="Cashier"/>
        </ComboBox>

        <!-- Password -->
        <PasswordBox x:Name="PasswordBox"
                     Header="Heslo"
                     PlaceholderText="Zadejte heslo"
                     PasswordChanged="PasswordBox_PasswordChanged"/>

        <TextBlock x:Name="PasswordHintTextBlock"
                   TextWrapping="Wrap"
                   FontSize="11"
                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                   Visibility="Collapsed">
            Ponechte prázdné, pokud nechcete měnit heslo
        </TextBlock>

        <!-- Error message -->
        <TextBlock x:Name="ErrorTextBlock"
                   Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                   TextWrapping="Wrap"
                   Visibility="Collapsed"/>
    </StackPanel>
</ContentDialog>
