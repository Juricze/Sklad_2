<ContentDialog
    x:Class="Sklad_2.Views.Dialogs.CreateFirstAdminDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Vytvořit administrátora"
    PrimaryButtonText="Vytvořit"
    CloseButtonText="Zrušit"
    DefaultButton="Primary"
    PrimaryButtonClick="PrimaryButton_Click">

    <StackPanel Spacing="12" MinWidth="400">
        <TextBlock TextWrapping="Wrap" Margin="0,0,0,12">
            <Run Text="Databáze neobsahuje žádné uživatele."/><LineBreak/>
            <Run Text="Vytvořte prvního administrátora, který bude moci spravovat aplikaci."/>
        </TextBlock>

        <!-- Username -->
        <TextBox x:Name="UsernameTextBox"
                 Header="Uživatelské jméno (login)"
                 PlaceholderText="např. admin"
                 TextChanged="TextBox_TextChanged"/>

        <!-- Display Name -->
        <TextBox x:Name="DisplayNameTextBox"
                 Header="Zobrazované jméno"
                 PlaceholderText="např. Administrátor"
                 TextChanged="TextBox_TextChanged"/>

        <!-- Password -->
        <PasswordBox x:Name="PasswordBox"
                     Header="Heslo"
                     PlaceholderText="Zadejte heslo"
                     PasswordChanged="PasswordBox_PasswordChanged"/>

        <!-- Error message -->
        <TextBlock x:Name="ErrorTextBlock"
                   Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                   TextWrapping="Wrap"
                   Visibility="Collapsed"/>
    </StackPanel>
</ContentDialog>
