<ContentDialog
    x:Class="Sklad_2.Views.Dialogs.ReturnPreviewDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Sklad_2.Models"
    xmlns:converters="using:Sklad_2.Converters"
    mc:Ignorable="d"
    Title="Náhled dobropisu"
    PrimaryButtonText="Tisk"
    CloseButtonText="Zavřít"
    DefaultButton="Close"
    PrimaryButtonClick="PrintButton_Click">

    <ContentDialog.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:CurrencyConverter x:Key="CurrencyConverter"/>
    </ContentDialog.Resources>

    <!-- Receipt-like styling: narrow, monospace feel -->
    <Border Background="White" Padding="16" CornerRadius="4" BorderBrush="#CCCCCC" BorderThickness="1">
        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="550">
            <StackPanel Width="320" Spacing="0">

                <!-- === HEADER === -->
                <TextBlock Text="{x:Bind ReturnDocument.ShopName, Mode=OneWay}"
                           FontWeight="Bold" FontSize="16"
                           HorizontalAlignment="Center" TextAlignment="Center"/>
                <TextBlock Text="{x:Bind ReturnDocument.ShopAddress, Mode=OneWay}"
                           FontSize="12" Foreground="#666666"
                           HorizontalAlignment="Center" TextAlignment="Center"
                           TextWrapping="Wrap" Margin="0,2,0,0"/>
                <TextBlock FontSize="12" HorizontalAlignment="Center" Margin="0,4,0,0">
                    <Run Text="IČ: "/><Run Text="{x:Bind ReturnDocument.CompanyId, Mode=OneWay}"/>
                </TextBlock>
                <TextBlock FontSize="12" HorizontalAlignment="Center"
                           Visibility="{x:Bind ReturnDocument.IsVatPayer, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Run Text="DIČ: "/><Run Text="{x:Bind ReturnDocument.VatId, Mode=OneWay}"/>
                </TextBlock>

                <!-- Separator -->
                <TextBlock Text="════════════════════════════════════"
                           FontFamily="Consolas" FontSize="10"
                           HorizontalAlignment="Center" Margin="0,8,0,8"
                           Foreground="#999999"/>

                <!-- === DOCUMENT TYPE === -->
                <Border Background="#FFEBEE" CornerRadius="4" Padding="8" Margin="0,0,0,8">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="DOBROPIS" FontWeight="Bold" FontSize="14" Foreground="#D32F2F" HorizontalAlignment="Center"/>
                        <TextBlock Text="OPRAVNÝ DAŇOVÝ DOKLAD" FontSize="10" Foreground="#D32F2F" HorizontalAlignment="Center"
                                   Visibility="{x:Bind ReturnDocument.IsVatPayer, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </Border>

                <!-- === DOCUMENT INFO === -->
                <Grid Margin="0,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" FontSize="11">
                        <Run Text="Č. "/><Run Text="{x:Bind ReturnDocument.FormattedReturnNumber, Mode=OneWay}" FontWeight="SemiBold"/>
                    </TextBlock>
                    <TextBlock Grid.Column="1" FontSize="11" Text="{x:Bind ReturnDocument.ReturnDateFormatted, Mode=OneWay}"/>
                </Grid>
                <TextBlock FontSize="11" Margin="0,4,0,0">
                    <Run Text="K původní účtence č.: "/><Run Text="{x:Bind OriginalReceiptNumber, Mode=OneWay}" FontWeight="SemiBold"/>
                </TextBlock>

                <!-- Separator -->
                <TextBlock Text="────────────────────────────────────"
                           FontFamily="Consolas" FontSize="10"
                           HorizontalAlignment="Center" Margin="0,8,0,8"
                           Foreground="#999999"/>

                <!-- === ITEMS === -->
                <TextBlock Text="Vrácené položky:" FontSize="11" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <ItemsRepeater ItemsSource="{x:Bind ReturnDocument.Items, Mode=OneWay}">
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate x:DataType="models:ReturnItem">
                            <StackPanel Margin="0,0,0,6">
                                <!-- Product name -->
                                <TextBlock Text="{x:Bind ProductName}" FontSize="12" TextWrapping="Wrap"/>
                                <!-- Quantity x Price = Total -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" FontSize="11" Foreground="#666666">
                                        <Run Text="  "/><Run Text="{x:Bind ReturnedQuantity}"/><Run Text=" x "/><Run Text="{x:Bind UnitPriceFormatted, Mode=OneWay}"/>
                                    </TextBlock>
                                    <TextBlock Grid.Column="1" Text="{x:Bind TotalRefundFormatted, Mode=OneWay}"
                                               FontSize="12" FontWeight="SemiBold" Foreground="#D32F2F"/>
                                </Grid>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>

                <!-- Double separator -->
                <TextBlock Text="════════════════════════════════════"
                           FontFamily="Consolas" FontSize="10"
                           HorizontalAlignment="Center" Margin="0,8,0,8"
                           Foreground="#999999"/>

                <!-- === VAT SUMMARY (only for VAT payers) === -->
                <StackPanel Visibility="{x:Bind ReturnDocument.IsVatPayer, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Margin="0,0,0,8">
                    <TextBlock Text="DPH:" FontSize="11" FontWeight="SemiBold"/>
                    <ItemsRepeater ItemsSource="{x:Bind VatSummaries, Mode=OneWay}" Margin="8,4,0,0">
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate x:DataType="models:VatSummary">
                                <Grid Margin="0,2,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{x:Bind VatRateFormatted, Mode=OneWay}" FontSize="10"/>
                                    <TextBlock Grid.Column="1" FontSize="10">
                                        <Run Text="Základ: "/><Run Text="{x:Bind TotalAmountWithoutVatFormatted, Mode=OneWay}"/>
                                    </TextBlock>
                                    <TextBlock Grid.Column="2" FontSize="10">
                                        <Run Text="DPH: "/><Run Text="{x:Bind TotalVatAmountFormatted, Mode=OneWay}"/>
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                    <!-- Separator -->
                    <TextBlock Text="────────────────────────────────────"
                               FontFamily="Consolas" FontSize="10"
                               HorizontalAlignment="Center" Margin="0,8,0,0"
                               Foreground="#999999"/>
                </StackPanel>

                <!-- === TOTAL === -->
                <!-- DRY: Use AmountToRefund (after loyalty discount) for actual refund amount -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="VRÁCENO:" FontSize="16" FontWeight="Bold" Foreground="#D32F2F"/>
                    <TextBlock Grid.Column="1" Text="{x:Bind ReturnDocument.AmountToRefundFormatted, Mode=OneWay}"
                               FontSize="16" FontWeight="Bold" Foreground="#D32F2F"/>
                </Grid>

                <!-- Separator -->
                <TextBlock Text="════════════════════════════════════"
                           FontFamily="Consolas" FontSize="10"
                           HorizontalAlignment="Center" Margin="0,12,0,8"
                           Foreground="#999999"/>

                <!-- === FOOTER === -->
                <TextBlock Text="Děkujeme za pochopení"
                           FontSize="12" HorizontalAlignment="Center"
                           FontStyle="Italic" Foreground="#666666"/>

            </StackPanel>
        </ScrollViewer>
    </Border>
</ContentDialog>
