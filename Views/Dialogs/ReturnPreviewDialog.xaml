<ContentDialog
    x:Class="Sklad_2.Views.Dialogs.ReturnPreviewDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Sklad_2.Models"
    xmlns:dialogs="using:Sklad_2.Views.Dialogs"
    mc:Ignorable="d"
    Title="Náhled dobropisu"
    PrimaryButtonText="Tisk"
    CloseButtonText="Zavřít"
    DefaultButton="Primary">

    <ScrollViewer>
        <StackPanel Spacing="16" MinWidth="400">
            <!-- Hlavička -->
            <StackPanel HorizontalAlignment="Center" Spacing="4">
                <TextBlock Text="{x:Bind ReturnDocument.ShopName, Mode=OneWay}" Style="{ThemeResource TitleTextBlockStyle}" HorizontalAlignment="Center"/>
                <TextBlock Text="{x:Bind ReturnDocument.ShopAddress, Mode=OneWay}" HorizontalAlignment="Center"/>
                <TextBlock HorizontalAlignment="Center">
                    <Run Text="IČ: "/><Run Text="{x:Bind ReturnDocument.CompanyId, Mode=OneWay}"/>
                    <Run Text=" | DIČ: "/><Run Text="{x:Bind ReturnDocument.VatId, Mode=OneWay}"/>
                </TextBlock>
            </StackPanel>

            <Rectangle Height="1" Fill="{ThemeResource CardStrokeColorDefaultBrush}"/>

            <!-- Informace o dokladu -->
            <TextBlock Text="DOBROPIS - OPRAVNÝ DAŇOVÝ DOKLAD" Style="{ThemeResource SubtitleTextBlockStyle}" HorizontalAlignment="Center"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0">
                    <Run Text="Číslo dobropisu: "/><Run Text="{x:Bind ReturnDocument.ReturnId, Mode=OneWay}"/>
                </TextBlock>
                <TextBlock Grid.Column="1" HorizontalAlignment="Right">
                    <Run Text="Datum: "/><Run Text="{x:Bind ReturnDocument.ReturnDateFormatted, Mode=OneWay}"/>
                </TextBlock>
            </Grid>
            <TextBlock>
                <Run Text="K původnímu dokladu č.: "/><Run Text="{x:Bind ReturnDocument.OriginalReceiptId, Mode=OneWay}"/>
            </TextBlock>

            <Rectangle Height="1" Fill="{ThemeResource CardStrokeColorDefaultBrush}"/>

            <!-- Položky -->
            <ListView ItemsSource="{x:Bind ReturnDocument.Items, Mode=OneWay}" SelectionMode="None">
                <ListView.HeaderTemplate>
                    <DataTemplate>
                        <Grid Padding="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Položka" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Text="Sazba DPH" FontWeight="Bold" Margin="12,0"/>
                            <TextBlock Grid.Column="2" Text="Vráceno celkem" FontWeight="Bold" HorizontalAlignment="Right"/>
                        </Grid>
                    </DataTemplate>
                </ListView.HeaderTemplate>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:ReturnItem">
                        <StackPanel Padding="8">
                            <Grid ColumnSpacing="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{x:Bind ProductName}"/>
                                <TextBlock Grid.Column="1" Text="{x:Bind VatRateFormatted, Mode=OneWay}"/>
                                <TextBlock Grid.Column="2" Text="{x:Bind TotalRefundFormatted, Mode=OneWay}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                            </Grid>
                            <TextBlock Style="{ThemeResource CaptionTextBlockStyle}">
                                <Run Text="{x:Bind ReturnedQuantity}"/><Run Text=" ks x "/><Run Text="{x:Bind UnitPriceFormatted, Mode=OneWay}"/>
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Rectangle Height="1" Fill="{ThemeResource CardStrokeColorDefaultBrush}"/>

            <!-- Souhrn DPH -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Spacing="4">
                    <TextBlock Text="Souhrn DPH" FontWeight="Bold"/>
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Sazba"/>
                        <TextBlock Grid.Column="1" Text="Základ" HorizontalAlignment="Right"/>
                        <TextBlock Grid.Column="2" Text="DPH" HorizontalAlignment="Right"/>
                    </Grid>
                    <ItemsRepeater ItemsSource="{x:Bind VatSummaries, Mode=OneWay}">
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate x:DataType="dialogs:VatSummary">
                                <Grid ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{x:Bind VatRateFormatted, Mode=OneWay}"/>
                                    <TextBlock Grid.Column="1" Text="{x:Bind TotalAmountWithoutVatFormatted, Mode=OneWay}" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="2" Text="{x:Bind TotalVatAmountFormatted, Mode=OneWay}" HorizontalAlignment="Right"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </StackPanel>

                <!-- Celkem -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                    <TextBlock Text="CELKEM VRÁCENO" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                    <TextBlock Text="{x:Bind ReturnDocument.TotalRefundAmountFormatted, Mode=OneWay}" Style="{ThemeResource TitleTextBlockStyle}" HorizontalAlignment="Right"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</ContentDialog>
