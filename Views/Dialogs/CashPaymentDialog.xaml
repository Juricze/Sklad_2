<ContentDialog
    x:Class="Sklad_2.Views.Dialogs.CashPaymentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:Sklad_2.Converters"
    mc:Ignorable="d"
    Title="Hotovostní platba"
    PrimaryButtonText="Potvrdit"
    CloseButtonText="Zrušit"
    DefaultButton="Primary"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick">

    <StackPanel Spacing="16" MinWidth="300">
        <TextBlock Text="Celkem k úhradě:" Style="{ThemeResource SubtitleTextBlockStyle}"/>
        <TextBlock Text="{x:Bind GrandTotal, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" Style="{ThemeResource TitleTextBlockStyle}" FontWeight="Bold"/>

        <TextBox Header="Přijatá hotovost" PlaceholderText="Zadejte přijatou hotovost..." 
                 Text="{Binding ReceivedAmount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource DecimalConverter}}" 
                 InputScope="Number"/>

        <TextBlock Text="Vráceno:" Style="{ThemeResource SubtitleTextBlockStyle}"/>
        <TextBlock Text="{Binding ChangeAmount, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" Style="{ThemeResource TitleTextBlockStyle}" FontWeight="Bold"/>

        <TextBlock Text="{Binding ErrorMessage, Mode=OneWay}" Foreground="Red" Margin="0,8,0,0"/>
    </StackPanel>
</ContentDialog>