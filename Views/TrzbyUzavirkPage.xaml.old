<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Sklad_2.Views.TrzbyUzavirkPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Sklad_2.Models"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="20" Spacing="20">
            <!-- Nadpis -->
            <TextBlock Text="Tr쬭y / Uzav칤rky" Style="{StaticResource TitleTextBlockStyle}" />

            <!-- Aktu치ln칤 denn칤 tr쬭a -->
            <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <StackPanel Spacing="15">
                    <TextBlock Text="游늵 Dne코n칤 tr쬭a"
                               Style="{StaticResource SubtitleTextBlockStyle}"
                               FontWeight="SemiBold"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Hotovost -->
                        <StackPanel Grid.Column="0" Spacing="5">
                            <TextBlock Text="游눳 Hotovost" FontSize="14" Opacity="0.7"/>
                            <TextBlock x:Name="CashSalesText"
                                       Text="{x:Bind ViewModel.TodayCashSalesFormatted, Mode=OneWay}"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="#34C759"/>
                        </StackPanel>

                        <!-- Karta -->
                        <StackPanel Grid.Column="1" Spacing="5">
                            <TextBlock Text="游눱 Karta" FontSize="14" Opacity="0.7"/>
                            <TextBlock x:Name="CardSalesText"
                                       Text="{x:Bind ViewModel.TodayCardSalesFormatted, Mode=OneWay}"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="#007AFF"/>
                        </StackPanel>

                        <!-- Celkem -->
                        <StackPanel Grid.Column="2" Spacing="5">
                            <TextBlock Text="游눯 Celkem" FontSize="14" Opacity="0.7"/>
                            <TextBlock x:Name="TotalSalesText"
                                       Text="{x:Bind ViewModel.TodayTotalSalesFormatted, Mode=OneWay}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="#FF9500"/>
                        </StackPanel>
                    </Grid>

                    <!-- Info 콏치dek -->
                    <StackPanel Orientation="Horizontal" Spacing="20">
                        <TextBlock>
                            <Run Text="Po캜et 칰캜tenek: "/>
                            <Run Text="{x:Bind ViewModel.TodayReceiptCount, Mode=OneWay}" FontWeight="Bold"/>
                        </TextBlock>
                        <TextBlock x:Name="DayStatusText"
                                   Text="{x:Bind ViewModel.IsDayClosed, Mode=OneWay, Converter={StaticResource DayClosedConverter}}"
                                   FontWeight="SemiBold"/>
                    </StackPanel>

                    <!-- Tla캜칤tko Uzav콏칤t den -->
                    <Button x:Name="CloseDayButton"
                            Content="游 Uzav콏칤t den"
                            Click="CloseDayButton_Click"
                            IsEnabled="{x:Bind ViewModel.IsDayClosed, Mode=OneWay, Converter={StaticResource BooleanToEnabledConverter}, ConverterParameter=Inverse}"
                            Style="{StaticResource AccentButtonStyle}"
                            HorizontalAlignment="Stretch"
                            Padding="12"
                            FontSize="16"/>
                </StackPanel>
            </Border>

            <!-- Export -->
            <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <StackPanel Spacing="15">
                    <TextBlock Text="游닋 Export uzav칤rek pro F칔"
                               Style="{StaticResource SubtitleTextBlockStyle}"
                               FontWeight="SemiBold"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Content="M캩s칤캜n칤" Click="ExportMonth_Click" Margin="0,0,5,0"/>
                        <Button Grid.Column="1" Content="캛tvrtletn칤" Click="ExportQuarter_Click" Margin="5,0,5,0"/>
                        <Button Grid.Column="2" Content="P콢lro캜n칤" Click="ExportHalfYear_Click" Margin="5,0,5,0"/>
                        <Button Grid.Column="3" Content="Ro캜n칤" Click="ExportYear_Click" Margin="5,0,0,0"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- P콏ehled uzav칤rek -->
            <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <StackPanel Spacing="15">
                    <TextBlock Text="游늶 P콏ehled uzav칤rek"
                               Style="{StaticResource SubtitleTextBlockStyle}"
                               FontWeight="SemiBold"/>

                    <!-- Filtry -->
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <CalendarDatePicker x:Name="FilterFromDatePicker"
                                            Header="Od"
                                            Date="{x:Bind ViewModel.FilterFromDate, Mode=TwoWay}"
                                            Width="150"/>
                        <CalendarDatePicker x:Name="FilterToDatePicker"
                                            Header="Do"
                                            Date="{x:Bind ViewModel.FilterToDate, Mode=TwoWay}"
                                            Width="150"/>
                        <Button Content="Filtrovat" Click="FilterButton_Click" VerticalAlignment="Bottom"/>
                        <Button Content="Zru코it filtr" Click="ClearFilterButton_Click" VerticalAlignment="Bottom"/>
                    </StackPanel>

                    <!-- Seznam uzav칤rek -->
                    <ListView x:Name="ClosesListView"
                              ItemsSource="{x:Bind ViewModel.DailyCloses, Mode=OneWay}"
                              MaxHeight="400"
                              SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:DailyClose">
                                <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="0,0,0,1"
                                        Padding="10,15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="150"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Datum" FontSize="12" Opacity="0.6"/>
                                            <TextBlock Text="{x:Bind DateFormatted}" FontWeight="SemiBold"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Prodava캜" FontSize="12" Opacity="0.6"/>
                                            <TextBlock Text="{x:Bind SellerName}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="칔캜tenky" FontSize="12" Opacity="0.6"/>
                                            <TextBlock Text="{x:Bind ReceiptRange}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="3">
                                            <TextBlock Text="游눳 Hotovost" FontSize="12" Opacity="0.6"/>
                                            <TextBlock Text="{x:Bind CashSalesFormatted}" Foreground="#34C759"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="4">
                                            <TextBlock Text="游눱 Karta" FontSize="12" Opacity="0.6"/>
                                            <TextBlock Text="{x:Bind CardSalesFormatted}" Foreground="#007AFF"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="5">
                                            <TextBlock Text="游눯 Celkem" FontSize="12" Opacity="0.6"/>
                                            <TextBlock Text="{x:Bind TotalSalesFormatted}" FontWeight="Bold" Foreground="#FF9500"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

            <!-- Status message -->
            <TextBlock x:Name="StatusMessageText"
                       Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"
                       Foreground="#FF9500"
                       FontStyle="Italic"
                       Visibility="{x:Bind ViewModel.StatusMessage, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}"/>
        </StackPanel>
    </ScrollViewer>
</Page>
