<Page
    x:Class="Sklad_2.Views.NovyProduktPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:Sklad_2.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded">

    <Grid Padding="24">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="24" MaxWidth="600">
            <!-- Product Info Card -->
            <Border Style="{StaticResource CardBorderStyle}" Shadow="{ThemeResource CardShadow}" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                <StackPanel Spacing="12">
                    <TextBlock Text="Z치kladn칤 informace" Style="{ThemeResource TitleTextBlockStyle}" Margin="0,0,0,8"/>

                    <TextBox Header="EAN k칩d" Text="{x:Bind ViewModel.Ean, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{x:Bind ViewModel.IsSalesRole, Mode=OneWay, Converter={StaticResource BooleanToEnabledConverter}, ConverterParameter=Inverse}"/>
                    <TextBox Header="N치zev produktu" Text="{x:Bind ViewModel.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{x:Bind ViewModel.IsSalesRole, Mode=OneWay, Converter={StaticResource BooleanToEnabledConverter}, ConverterParameter=Inverse}"/>

                    <!-- Brand Selection -->
                    <ComboBox Header="Zna캜ka (voliteln칠)"
                              ItemsSource="{x:Bind ViewModel.Brands, Mode=OneWay}"
                              SelectedItem="{x:Bind ViewModel.SelectedBrand, Mode=TwoWay}"
                              DisplayMemberPath="Name"
                              PlaceholderText="Vyberte zna캜ku..."
                              IsEnabled="{x:Bind ViewModel.IsSalesRole, Mode=OneWay, Converter={StaticResource BooleanToEnabledConverter}, ConverterParameter=Inverse}"/>

                    <!-- Category Selection -->
                    <ComboBox Header="Kategorie"
                              ItemsSource="{x:Bind ViewModel.ProductCategoriesCollection, Mode=OneWay}"
                              SelectedItem="{x:Bind ViewModel.SelectedProductCategory, Mode=TwoWay}"
                              DisplayMemberPath="Name"
                              PlaceholderText="Vyberte kategorii..."
                              IsEnabled="{x:Bind ViewModel.IsSalesRole, Mode=OneWay, Converter={StaticResource BooleanToEnabledConverter}, ConverterParameter=Inverse}"/>

                    <TextBox Header="Popis (nepovinn칠)"
                             Text="{x:Bind ViewModel.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             MinHeight="60"
                             MaxHeight="100"
                             PlaceholderText="Zadejte popis produktu..."
                             IsEnabled="{x:Bind ViewModel.IsSalesRole, Mode=OneWay, Converter={StaticResource BooleanToEnabledConverter}, ConverterParameter=Inverse}"/>
                    <TextBox Header="N치kupn칤 cena (K캜)" Text="{x:Bind ViewModel.PurchasePrice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{x:Bind ViewModel.IsSalesRole, Mode=OneWay, Converter={StaticResource BooleanToEnabledConverter}, ConverterParameter=Inverse}"/>
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" Header="Prodejn칤 cena (K캜)" Text="{x:Bind ViewModel.SalePrice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{x:Bind ViewModel.IsSalesRole, Mode=OneWay, Converter={StaticResource BooleanToEnabledConverter}, ConverterParameter=Inverse}"/>
                        <TextBox Grid.Column="1" Header="Mar쬰 (%)" Text="{x:Bind ViewModel.Markup, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="100" IsEnabled="{x:Bind ViewModel.IsSalesRole, Mode=OneWay, Converter={StaticResource BooleanToEnabledConverter}, ConverterParameter=Inverse}"/>
                    </Grid>
                    <StackPanel Visibility="{x:Bind ViewModel.IsVatPayer, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="Sazba DPH" Style="{ThemeResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock Text="{x:Bind ViewModel.VatRateDisplay, Mode=OneWay}" Style="{ThemeResource BodyStrongTextBlockStyle}" Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Image Section -->
                    <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="4" Padding="12" Margin="0,8,0,0">
                        <StackPanel Spacing="8">
                            <TextBlock Text="Obr치zek produktu" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Image Preview -->
                                <Border Grid.Column="0"
                                        Width="120" Height="120"
                                        Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4">
                                    <Grid>
                                        <!-- Placeholder icon -->
                                        <FontIcon Glyph="&#xE91B;"
                                                  FontSize="40"
                                                  Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Visibility="{x:Bind ViewModel.HasPendingImage, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}"/>
                                        <!-- Preview image -->
                                        <Image Source="{x:Bind ViewModel.PreviewImage, Mode=OneWay}"
                                               Stretch="Uniform"
                                               Visibility="{x:Bind ViewModel.HasPendingImage, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    </Grid>
                                </Border>

                                <!-- Buttons -->
                                <StackPanel Grid.Column="1" Spacing="8" Margin="12,0,0,0" VerticalAlignment="Center">
                                    <Button Content="Vybrat obr치zek"
                                            Click="SelectImageButton_Click"
                                            IsEnabled="{x:Bind ViewModel.IsSalesRole, Mode=OneWay, Converter={StaticResource BooleanToEnabledConverter}, ConverterParameter=Inverse}"/>
                                    <Button Content="Odstranit"
                                            Command="{x:Bind ViewModel.RemoveImageCommand}"
                                            Visibility="{x:Bind ViewModel.HasPendingImage, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
                                            IsEnabled="{x:Bind ViewModel.IsSalesRole, Mode=OneWay, Converter={StaticResource BooleanToEnabledConverter}, ConverterParameter=Inverse}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Discount Section -->
                    <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="4" Padding="12" Margin="0,8,0,0">
                        <StackPanel Spacing="8">
                            <CheckBox Content="Zlevn캩n칳 produkt" 
                                      IsChecked="{x:Bind ViewModel.HasDiscount, Mode=TwoWay}"
                                      IsEnabled="{x:Bind ViewModel.IsAdmin, Mode=OneWay}"/>
                            
                            <StackPanel Visibility="{x:Bind ViewModel.HasDiscount, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" 
                                        Spacing="8">
                                <NumberBox Header="Sleva (%)" 
                                           Minimum="0" 
                                           Maximum="100"
                                           SpinButtonPlacementMode="Inline"
                                           Value="{x:Bind ViewModel.DiscountPercent, Mode=TwoWay}"
                                           IsEnabled="{x:Bind ViewModel.IsAdmin, Mode=OneWay}"/>
                                
                                <ComboBox Header="D콢vod slevy"
                                          ItemsSource="{x:Bind ViewModel.DiscountReasons}"
                                          SelectedItem="{x:Bind ViewModel.SelectedDiscountReason, Mode=TwoWay}"
                                          IsEnabled="{x:Bind ViewModel.IsAdmin, Mode=OneWay}"/>
                                
                                <CheckBox Content="Do vyprod치n칤 z치sob (bez expirace)" 
                                          IsChecked="{x:Bind ViewModel.IsStockClearance, Mode=TwoWay}"
                                          IsEnabled="{x:Bind ViewModel.IsAdmin, Mode=OneWay}"/>
                                
                                <DatePicker Header="Platnost od" 
                                            Date="{x:Bind ViewModel.DiscountValidFrom, Mode=TwoWay}"
                                            IsEnabled="{x:Bind ViewModel.IsAdmin, Mode=OneWay}"
                                            Visibility="{x:Bind ViewModel.ShowDiscountDates, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                
                                <DatePicker Header="Platnost do" 
                                            Date="{x:Bind ViewModel.DiscountValidTo, Mode=TwoWay}"
                                            IsEnabled="{x:Bind ViewModel.IsAdmin, Mode=OneWay}"
                                            Visibility="{x:Bind ViewModel.ShowDiscountDates, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                
                                <TextBlock Text="游눠 Sleva 'Do vyprod치n칤 z치sob' plat칤 dokud nen칤 v코e prod치no"
                                           FontSize="12"
                                           Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                           TextWrapping="Wrap"
                                           Visibility="{x:Bind ViewModel.IsStockClearance, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                
                                <TextBlock Text="{x:Bind ViewModel.FinalPriceDisplay, Mode=OneWay}" 
                                           Style="{ThemeResource BodyStrongTextBlockStyle}" 
                                           Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </Border>

            <!-- Brand Management Card -->
            <Border Style="{StaticResource CardBorderStyle}" Shadow="{ThemeResource CardShadow}" HorizontalAlignment="Stretch" VerticalAlignment="Top" Background="#FFF8F8F8">
                <Expander Header="Spr치va zna캜ek" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                    <Expander.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE8B8;" FontSize="16" Foreground="#FF6B4EBB"/>
                                <TextBlock Text="{Binding}" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="#FF6B4EBB"/>
                            </StackPanel>
                        </DataTemplate>
                    </Expander.HeaderTemplate>
                    <StackPanel Spacing="12" Margin="0,12,0,0">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Button Content="P콏idat zna캜ku" Click="AddBrand_Click" Style="{StaticResource AccentButtonStyle}" IsEnabled="{x:Bind ViewModel.IsAdmin, Mode=OneWay}"/>
                            <Button Content="Upravit" Click="EditBrand_Click" IsEnabled="{x:Bind ViewModel.IsAdmin, Mode=OneWay}"/>
                            <Button Content="Smazat" Click="DeleteBrand_Click" IsEnabled="{x:Bind ViewModel.IsAdmin, Mode=OneWay}"/>
                        </StackPanel>
                        <ListView x:Name="BrandsListView"
                                  ItemsSource="{x:Bind ViewModel.Brands, Mode=OneWay}"
                                  SelectionMode="Single"
                                  MaxHeight="200"
                                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                  BorderThickness="1"
                                  CornerRadius="4">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="local:Brand">
                                    <StackPanel>
                                        <TextBlock Text="{x:Bind Name}" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock Text="{x:Bind Description}" Style="{ThemeResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Expander>
            </Border>

            <!-- Category Management Card -->
            <Border Style="{StaticResource CardBorderStyle}" Shadow="{ThemeResource CardShadow}" HorizontalAlignment="Stretch" VerticalAlignment="Top" Background="#FFF8F8F8">
                <Expander Header="Spr치va kategori칤" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                    <Expander.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE8FD;" FontSize="16" Foreground="#FF0078D7"/>
                                <TextBlock Text="{Binding}" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="#FF0078D7"/>
                            </StackPanel>
                        </DataTemplate>
                    </Expander.HeaderTemplate>
                    <StackPanel Spacing="12" Margin="0,12,0,0">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Button Content="P콏idat kategorii" Click="AddCategory_Click" Style="{StaticResource AccentButtonStyle}" IsEnabled="{x:Bind ViewModel.IsAdmin, Mode=OneWay}"/>
                            <Button Content="Upravit" Click="EditCategory_Click" IsEnabled="{x:Bind ViewModel.IsAdmin, Mode=OneWay}"/>
                            <Button Content="Smazat" Click="DeleteCategory_Click" IsEnabled="{x:Bind ViewModel.IsAdmin, Mode=OneWay}"/>
                        </StackPanel>
                        <ListView x:Name="CategoriesListView"
                                  ItemsSource="{x:Bind ViewModel.ProductCategoriesCollection, Mode=OneWay}"
                                  SelectionMode="Single"
                                  MaxHeight="200"
                                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                  BorderThickness="1"
                                  CornerRadius="4">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="local:ProductCategory">
                                    <StackPanel>
                                        <TextBlock Text="{x:Bind Name}" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock Text="{x:Bind Description}" Style="{ThemeResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Expander>
            </Border>

            <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" Margin="0,12,0,0" Foreground="{ThemeResource AccentFillColorDefaultBrush}" TextWrapping="Wrap" FontWeight="Bold"/>
            <Button Content="P콏idat nov칳 produkt" Style="{StaticResource PrimaryButtonStyle}" HorizontalAlignment="Stretch" Command="{x:Bind ViewModel.AddNewProductCommand}" IsEnabled="{x:Bind ViewModel.IsSalesRole, Mode=OneWay, Converter={StaticResource BooleanToEnabledConverter}, ConverterParameter=Inverse}"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
