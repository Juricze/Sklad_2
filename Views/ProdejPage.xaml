<Page
    x:Class="Sklad_2.Views.ProdejPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Sklad_2.Models"
    xmlns:services="using:Sklad_2.Services"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid Padding="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="420"/>
        </Grid.ColumnDefinitions>

        <!-- Main content area -->
        <StackPanel Grid.Column="0" Margin="0,0,24,0" Spacing="24">
            <Border Style="{StaticResource CardBorderStyle}" Shadow="{ThemeResource CardShadow}">
                <TextBox x:Name="EanTextBox" Header="EAN kód produktu" PlaceholderText="Naskenujte nebo zadejte kód..." KeyDown="EanTextBox_KeyDown"/>
            </Border>
            <Border Style="{StaticResource CardBorderStyle}" Shadow="{ThemeResource CardShadow}" Visibility="{x:Bind ViewModel.IsProductFound, Mode=OneWay}">
                <StackPanel Spacing="6">
                    <TextBlock Text="Poslední skenovaný produkt" Style="{ThemeResource TitleTextBlockStyle}"/>
                    <TextBlock><Run Text="Název:" FontWeight="Bold"/> <Run Text="{x:Bind ViewModel.ScannedProduct.Name, Mode=OneWay}"/></TextBlock>
                    <TextBlock><Run Text="Cena:" FontWeight="Bold"/> <Run Text="{x:Bind ViewModel.ScannedProductPriceFormatted, Mode=OneWay}"/></TextBlock>
                    <TextBlock><Run Text="Skladem:" FontWeight="Bold"/> <Run Text="{x:Bind ViewModel.ScannedProduct.StockQuantity, Mode=OneWay}"/> <Run Text="ks"/></TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Receipt area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Border Grid.Row="0" Style="{StaticResource CardBorderStyle}" Shadow="{ThemeResource CardShadow}">
                <Grid RowSpacing="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Účtenka" Style="{ThemeResource TitleTextBlockStyle}"/>
                    <ListView Grid.Row="1"
                              ItemsSource="{x:Bind ViewModel.Receipt.Items, Mode=OneWay}"
                              SelectedItem="{x:Bind ViewModel.SelectedReceiptItem, Mode=TwoWay}"
                              SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="services:ReceiptItem">
                                <Grid ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{x:Bind Product.Name}" FontWeight="Bold"/>
                                        <TextBlock>
                                            <Run Text="{x:Bind QuantityFormatted, Mode=OneWay}"/>
                                            <Run Text=" x "/>
                                            <Run Text="{x:Bind Product.SalePriceFormatted, Mode=OneWay}"/>
                                        </TextBlock>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" Text="{x:Bind TotalPriceFormatted, Mode=OneWay}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    
                    <!-- Buttons for selected item -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
                        <Button Command="{x:Bind ViewModel.IncrementQuantityCommand}" ToolTipService.ToolTip="Zvýšit množství vybrané položky">
                            <FontIcon Glyph="&#xE710;"/>
                        </Button>
                        <Button Command="{x:Bind ViewModel.DecrementQuantityCommand}" ToolTipService.ToolTip="Snížit množství vybrané položky">
                            <FontIcon Glyph="&#xE738;"/>
                        </Button>
                        <Button Command="{x:Bind ViewModel.RemoveItemCommand}" ToolTipService.ToolTip="Odebrat vybranou položku">
                            <FontIcon Glyph="&#xE74D;"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <StackPanel Grid.Row="1" Spacing="12" Margin="0,24,0,0">
                <TextBlock Text="{x:Bind ViewModel.GrandTotalFormatted, Mode=OneWay}" Style="{ThemeResource TitleTextBlockStyle}" HorizontalAlignment="Right"/>
                <Button Content="K pokladně" Click="CheckoutButton_Click" Style="{StaticResource PrimaryButtonStyle}" HorizontalAlignment="Stretch"/>
                <Button Content="Smazat účtenku" Click="ClearReceiptButton_Click" HorizontalAlignment="Stretch"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>