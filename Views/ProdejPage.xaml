<Page
    x:Class="Sklad_2.Views.ProdejPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Sklad_2.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid Padding="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="360"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="1" Style="{StaticResource CardBorderStyle}" Shadow="{ThemeResource CardShadow}">
            <ListView Header="Účtenka" ItemsSource="{x:Bind ViewModel.ReceiptItems}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Product">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="{x:Bind Name}" FontWeight="Bold"/>
                            <TextBlock Text="{x:Bind SalePrice}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>
        <StackPanel Grid.Column="0" Margin="0,0,24,0" Spacing="24">
            <Border Style="{StaticResource CardBorderStyle}" Shadow="{ThemeResource CardShadow}">
                <TextBox x:Name="EanTextBox" Header="EAN kód produktu" PlaceholderText="Naskenujte nebo zadejte kód..." KeyDown="EanTextBox_KeyDown"/>
            </Border>
            <Border Style="{StaticResource CardBorderStyle}" Shadow="{ThemeResource CardShadow}" Visibility="{x:Bind ViewModel.IsProductFound, Mode=OneWay}">
                <StackPanel Spacing="12">
                    <TextBlock Text="Nalezený produkt" Style="{ThemeResource TitleTextBlockStyle}"/>
                    <TextBlock Text="{x:Bind ViewModel.ScannedProduct.Name, Mode=OneWay}"/>
                    <TextBlock Text="{x:Bind ViewModel.ScannedProduct.SalePrice, Mode=OneWay}"/>
                    <TextBlock Text="{x:Bind ViewModel.ScannedProduct.StockQuantity, Mode=OneWay}"/>
                    <Button Content="Přidat na účtenku" Command="{x:Bind ViewModel.AddToReceiptCommand}" HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>
