<Page
    x:Name="page"
    x:Class="Sklad_2.Views.VratkyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:Sklad_2.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="24" RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Search Section -->
        <StackPanel Grid.Row="0" Spacing="12" MaxWidth="400">
            <TextBlock Text="Vytvoření vratky" Style="{ThemeResource TitleTextBlockStyle}"/>
            <TextBox Header="Zadejte číslo původní účtenky" 
                     Text="{x:Bind ViewModel.ReceiptIdToSearch, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     KeyDown="ReceiptIdTextBox_KeyDown"/>
            <Button Content="Najít účtenku" 
                    Command="{x:Bind ViewModel.FindReceiptCommand}" 
                    Style="{StaticResource PrimaryButtonStyle}"/>
            <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" Foreground="Red"/>
        </StackPanel>

        <!-- Return Processing Section (Visible when receipt is found) -->
        <Grid Grid.Row="1" Margin="0,24,0,0"
              Visibility="{x:Bind ViewModel.IsReceiptFound, Mode=OneWay}"
              RowSpacing="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Style="{ThemeResource SubtitleTextBlockStyle}">
                <Run Text="Položky na účtence č."/>
                <Run Text="{x:Bind ViewModel.FoundReceipt.ReceiptId, Mode=OneWay}"/>
            </TextBlock>

            <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.ItemsToReturn, Mode=OneWay}" SelectionMode="None">
                <ListView.HeaderTemplate>
                    <DataTemplate>
                        <Grid Padding="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Produkt" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Text="Původní množství" FontWeight="Bold" Margin="12,0" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="Množství k vrácení" FontWeight="Bold" Margin="12,0" HorizontalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </ListView.HeaderTemplate>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="viewmodels:ReturnItemViewModel">
                        <Grid ColumnSpacing="12" Padding="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" VerticalAlignment="Center" Spacing="2">
                                <TextBlock Text="{x:Bind OriginalItem.ProductName}" FontWeight="SemiBold"/>
                                <TextBlock FontSize="12">
                                    <Run Text="Cena: " Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    <Run Text="{x:Bind OriginalItem.UnitPriceFormatted}"/>
                                </TextBlock>
                                
                                <!-- Show discount info if item was discounted -->
                                <TextBlock Visibility="{x:Bind OriginalItem.HasDiscount, Converter={StaticResource BooleanToVisibilityConverter}}"
                                           FontSize="11" 
                                           Foreground="{ThemeResource AccentFillColorDefaultBrush}">
                                    <Run Text="Původně: "/>
                                    <Run Text="{x:Bind OriginalItem.OriginalUnitPriceFormatted}"/>
                                    <Run Text=" • Sleva "/>
                                    <Run Text="{x:Bind OriginalItem.DiscountPercentFormatted}"/>
                                    <Run Text=" ("/>
                                    <Run Text="{x:Bind OriginalItem.DiscountReason}"/>
                                    <Run Text=")"/>
                                </TextBlock>
                            </StackPanel>
                            
                            <TextBlock Grid.Column="1" Text="{x:Bind OriginalItem.Quantity}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <NumberBox Grid.Column="2"
                                       Value="{x:Bind ReturnQuantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                       Minimum="0"
                                       Maximum="{x:Bind MaxReturnQuantity}"
                                       SpinButtonPlacementMode="Compact"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackPanel Grid.Row="2" Spacing="12" HorizontalAlignment="Right" Margin="0,12,0,0">
                <StackPanel Spacing="4" HorizontalAlignment="Right">
                    <TextBlock Text="{x:Bind ViewModel.TotalRefundAmountWithoutVatFormatted, Mode=OneWay}" Style="{ThemeResource BodyTextBlockStyle}" HorizontalAlignment="Right" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Visibility="{x:Bind ViewModel.IsVatPayer, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <TextBlock Text="{x:Bind ViewModel.TotalRefundVatAmountFormatted, Mode=OneWay}" Style="{ThemeResource BodyTextBlockStyle}" HorizontalAlignment="Right" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Visibility="{x:Bind ViewModel.IsVatPayer, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <TextBlock Text="{x:Bind ViewModel.TotalRefundAmountFormatted, Mode=OneWay}" Style="{ThemeResource TitleTextBlockStyle}" HorizontalAlignment="Right"/>
                </StackPanel>
                <Button Content="Dokončit vratku"
                        Click="ProcessReturnButton_Click"
                        Style="{StaticResource PrimaryButtonStyle}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
