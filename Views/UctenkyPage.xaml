<Page
    x:Class="Sklad_2.Views.UctenkyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Sklad_2.Models"
    xmlns:viewmodels="using:Sklad_2.ViewModels"
    xmlns:converters="using:Sklad_2.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Controls.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:AmountToBrushConverter x:Key="AmountToBrushConverter"/>
        </ResourceDictionary>
    </Page.Resources>
    <Grid Padding="24" ColumnSpacing="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Master List of Receipts -->
        <Grid Grid.Column="0" RowSpacing="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Seznam ÃºÄtenek" Style="{ThemeResource TitleTextBlockStyle}"/>

            <StackPanel Grid.Row="1" Orientation="Vertical" Spacing="8" Margin="0,12,0,0">
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <RadioButton Content="DennÃ­" Style="{StaticResource ToggleButtonStyle}" IsChecked="{x:Bind ViewModel.SelectedFilterType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Daily, Mode=OneWay}" Checked="Filter_Checked" Tag="Daily"/>
                    <RadioButton Content="TÃ½dennÃ­" Style="{StaticResource ToggleButtonStyle}" IsChecked="{x:Bind ViewModel.SelectedFilterType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Weekly, Mode=OneWay}" Checked="Filter_Checked" Tag="Weekly"/>
                    <RadioButton Content="MÄ›sÃ­ÄnÃ­" Style="{StaticResource ToggleButtonStyle}" IsChecked="{x:Bind ViewModel.SelectedFilterType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Monthly, Mode=OneWay}" Checked="Filter_Checked" Tag="Monthly"/>
                    <RadioButton Content="VlastnÃ­" Style="{StaticResource ToggleButtonStyle}" IsChecked="{x:Bind ViewModel.SelectedFilterType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Custom, Mode=OneWay}" Checked="Filter_Checked" Tag="Custom"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="8" Visibility="{x:Bind ViewModel.IsCustomFilterVisible, Mode=OneWay}">
                    <CalendarDatePicker Header="Od" Date="{x:Bind ViewModel.FilterStartDate, Mode=TwoWay}" HorizontalAlignment="Stretch"/>
                    <CalendarDatePicker Header="Do" Date="{x:Bind ViewModel.FilterEndDate, Mode=TwoWay}" HorizontalAlignment="Stretch"/>
                </StackPanel>
            </StackPanel>

            <ListView Grid.Row="2"
                      ItemsSource="{x:Bind ViewModel.Receipts, Mode=OneWay}"
                      SelectedItem="{x:Bind ViewModel.SelectedReceipt, Mode=TwoWay}"
                      SelectionMode="Single"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollMode="Auto">
                <ListView.HeaderTemplate>
                    <DataTemplate>
                        <Grid Padding="12" Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" MinWidth="500">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="1.5*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Datum" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Text="Celkem" FontWeight="Bold"/>
                            <TextBlock Grid.Column="2" Text="Platba" FontWeight="Bold"/>
                            <TextBlock Grid.Column="3" Text="ProdavaÄ" FontWeight="Bold"/>
                        </Grid>
                    </DataTemplate>
                </ListView.HeaderTemplate>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Receipt">
                        <Grid Padding="12" ColumnSpacing="12" MinWidth="500">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="1.5*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" VerticalAlignment="Center">
                                <Run Text="{x:Bind StornoIndicator}"/>
                                <Run Text="{x:Bind SaleDateFormatted}"/>
                            </TextBlock>
                            <!-- Celkem ÄÃ¡stka + ikona slevy -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="6" HorizontalAlignment="Left" MinWidth="120">
                                <!-- ÄŒÃ¡stka Celkem -->
                                <TextBlock Text="{Binding AmountToPayFormatted, Mode=OneWay}"
                                           FontWeight="Bold"
                                           Foreground="{Binding Converter={StaticResource ReceiptTotalBrushConverter}}"                                           
                                           VerticalAlignment="Center"/>

                                <!-- Ikona slevy (viditelnÃ¡ pouze pokud HasProductDiscounts) -->
                                <Border Background="#F3E8FF"
                                        CornerRadius="4"
                                        Padding="4,2"
                                        Visibility="{Binding HasProductDiscounts, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="ðŸ·ï¸"
                                               FontSize="14"
                                               VerticalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                            <TextBlock Grid.Column="2" Text="{x:Bind PaymentMethod}" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="3" Text="{x:Bind SellerName}" VerticalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <!-- Detail View for Selected Receipt -->
        <Border Grid.Column="1"
                Style="{StaticResource CardBorderStyle}"
                Shadow="{ThemeResource CardShadow}"
                Visibility="{x:Bind ViewModel.IsReceiptSelected, Mode=OneWay}">
            <ScrollViewer>
                <StackPanel Spacing="12" Padding="12">
                    <TextBlock Text="Detail ÃºÄtenky" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                    <!-- Storno Warning Banner -->
                    <Border Background="#FFEBEE"
                            BorderBrush="#FF3B30"
                            BorderThickness="2"
                            CornerRadius="4"
                            Padding="12"
                            Visibility="{x:Bind ViewModel.SelectedReceipt.IsStorno, Mode=OneWay}">
                        <StackPanel Spacing="4">
                            <TextBlock FontWeight="Bold" Foreground="#FF3B30">
                                <Run Text="âŒ STORNO ÃšÄŒTENKA"/>
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" FontSize="12">
                                <Run Text="Tato ÃºÄtenka stornuje pÅ¯vodnÃ­ ÃºÄtenku Ä."/>
                                <Run Text="{x:Bind ViewModel.SelectedReceipt.OriginalReceiptId, Mode=OneWay}" FontWeight="Bold"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="ÄŒÃ­slo ÃºÄtenky:" FontWeight="Bold"/>
                        <TextBlock Grid.Column="1" Text="{x:Bind ViewModel.SelectedReceipt.FormattedReceiptNumber, Mode=OneWay}"/>
                    </Grid>
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Datum:" FontWeight="Bold"/>
                        <TextBlock Grid.Column="1" Text="{x:Bind ViewModel.SelectedReceipt.SaleDateFormatted, Mode=OneWay}"/>
                    </Grid>
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Platba:" FontWeight="Bold"/>
                        <TextBlock Grid.Column="1" Text="{x:Bind ViewModel.SelectedReceipt.PaymentMethod, Mode=OneWay}"/>
                    </Grid>
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="ProdavaÄ:" FontWeight="Bold"/>
                        <TextBlock Grid.Column="1" Text="{x:Bind ViewModel.SelectedReceipt.SellerName, Mode=OneWay}"/>
                    </Grid>

                    <ListView ItemsSource="{x:Bind ViewModel.SelectedReceipt.Items, Mode=OneWay}" Margin="0,12,0,0" SelectionMode="None">
                        <ListView.HeaderTemplate>
                            <DataTemplate>
                                <Grid Padding="8" Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Produkt" FontWeight="Bold"/>
                                    <TextBlock Grid.Column="1" Text="MnoÅ¾stvÃ­" FontWeight="Bold" Margin="12,0"/>
                                    <TextBlock Grid.Column="2" Text="Cena/ks" FontWeight="Bold" Margin="12,0"/>
                                    <TextBlock Grid.Column="3" Text="Celkem" FontWeight="Bold" Margin="12,0"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.HeaderTemplate>
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:ReceiptItem">
                                <StackPanel Padding="8">
                                    <Grid ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{x:Bind ProductName}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="{x:Bind Quantity}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="{x:Bind UnitPriceFormatted, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" Text="{x:Bind TotalPriceFormatted, Mode=OneWay}" FontWeight="SemiBold" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                    </Grid>
                                    
                                    <!-- Show discount info if item has discount -->
                                    <TextBlock Style="{ThemeResource CaptionTextBlockStyle}" 
                                               Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                               Visibility="{x:Bind HasDiscount, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
                                               Margin="0,2,0,0">
                                        <Run Text="  Sleva "/><Run Text="{x:Bind DiscountPercentFormatted, Mode=OneWay}"/>
                                        <Run Text=" ("/>
                                        <Run Text="{x:Bind DiscountReason, Mode=OneWay}"/>
                                        <Run Text=") z "/><Run Text="{x:Bind OriginalUnitPriceFormatted, Mode=OneWay}"/>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- Receipt Summary -->
                    <StackPanel HorizontalAlignment="Right" Margin="0,12,0,0" Spacing="4">
                        <TextBlock Text="CELKEM POLOÅ½KY" Style="{ThemeResource CaptionTextBlockStyle}" HorizontalAlignment="Right"/>
                        <TextBlock Text="{x:Bind ViewModel.SelectedReceipt.TotalAmountFormatted, Mode=OneWay}"
                                   Style="{ThemeResource SubtitleTextBlockStyle}"
                                   HorizontalAlignment="Right"/>

                        <!-- VÄ›rnostnÃ­ sleva (pokud byla pouÅ¾ita) -->
                        <StackPanel Visibility="{x:Bind ViewModel.SelectedReceipt.HasLoyaltyDiscount, Mode=OneWay}" Margin="0,8,0,0">
                            <TextBlock Style="{ThemeResource CaptionTextBlockStyle}" HorizontalAlignment="Right">
                                <Run Text="VÄ›rnostnÃ­ sleva ("/>
                                <Run Text="{x:Bind ViewModel.SelectedReceipt.LoyaltyDiscountPercent, Mode=OneWay}"/>
                                <Run Text="%):"/>
                            </TextBlock>
                            <TextBlock Text="{x:Bind ViewModel.SelectedReceipt.LoyaltyDiscountAmountFormatted, Mode=OneWay}"
                                       Style="{ThemeResource SubtitleTextBlockStyle}"
                                       HorizontalAlignment="Right"
                                       Foreground="#007AFF"/>
                        </StackPanel>

                        <!-- DÃ¡rkovÃ½ poukaz (pokud byl pouÅ¾it) -->
                        <StackPanel Visibility="{x:Bind ViewModel.SelectedReceipt.ContainsGiftCardRedemption, Mode=OneWay}" Margin="0,8,0,0">
                            <TextBlock Text="DÃ¡rkovÃ½ poukaz:" Style="{ThemeResource CaptionTextBlockStyle}" HorizontalAlignment="Right"/>
                            <TextBlock Text="{x:Bind ViewModel.SelectedReceipt.GiftCardRedemptionAmountFormatted, Mode=OneWay}"
                                       Style="{ThemeResource SubtitleTextBlockStyle}"
                                       HorizontalAlignment="Right"
                                       Foreground="#34C759"/>
                        </StackPanel>

                        <!-- K ÃºhradÄ› (pokud byla pouÅ¾ita jakÃ¡koliv sleva) -->
                        <StackPanel Visibility="{x:Bind ViewModel.SelectedReceipt.HasAnyDiscount, Mode=OneWay}" Margin="0,8,0,0">
                            <Rectangle Height="1" Fill="{ThemeResource CardStrokeColorDefaultBrush}" Margin="0,0,0,8"/>
                            <TextBlock Text="K ÃšHRADÄš" Style="{ThemeResource SubtitleTextBlockStyle}" HorizontalAlignment="Right"/>
                            <TextBlock Text="{x:Bind ViewModel.AmountToPayFormatted, Mode=OneWay}"
                                       Style="{ThemeResource TitleTextBlockStyle}"
                                       HorizontalAlignment="Right"
                                       FontWeight="Bold"/>
                        </StackPanel>

                        <!-- Celkem uhrazeno (pokud NEBYLA pouÅ¾ita Å¾Ã¡dnÃ¡ sleva) -->
                        <StackPanel Visibility="{x:Bind ViewModel.SelectedReceipt.HasAnyDiscount, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}" Margin="0,8,0,0">
                            <Rectangle Height="1" Fill="{ThemeResource CardStrokeColorDefaultBrush}" Margin="0,0,0,8"/>
                            <TextBlock Text="CELKEM UHRAZENO" Style="{ThemeResource SubtitleTextBlockStyle}" HorizontalAlignment="Right"/>
                            <TextBlock Text="{x:Bind ViewModel.SelectedReceipt.TotalAmountFormatted, Mode=OneWay}"
                                       Style="{ThemeResource TitleTextBlockStyle}"
                                       HorizontalAlignment="Right"
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>

                    <Button Content="Zobrazit nÃ¡hled ÃºÄtenky"
                            Click="ShowPreviewButton_Click"
                            Style="{StaticResource PrimaryButtonStyle}"
                            HorizontalAlignment="Stretch"
                            Margin="0,24,0,0"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
