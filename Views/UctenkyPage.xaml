<Page
    x:Class="Sklad_2.Views.UctenkyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Sklad_2.Models"
    xmlns:viewmodels="using:Sklad_2.ViewModels"
    xmlns:converters="using:Sklad_2.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Controls.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
        </ResourceDictionary>
    </Page.Resources>
    <Grid Padding="24" ColumnSpacing="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="420"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Master List of Receipts -->
        <Grid Grid.Column="0" RowSpacing="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Seznam účtenek" Style="{ThemeResource TitleTextBlockStyle}"/>

            <StackPanel Grid.Row="1" Orientation="Vertical" Spacing="8" Margin="0,12,0,0">
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <RadioButton Content="Denní" Style="{StaticResource ToggleButtonStyle}" IsChecked="{x:Bind ViewModel.SelectedFilterType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Daily, Mode=OneWay}" Checked="Filter_Checked" Tag="Daily"/>
                    <RadioButton Content="Týdenní" Style="{StaticResource ToggleButtonStyle}" IsChecked="{x:Bind ViewModel.SelectedFilterType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Weekly, Mode=OneWay}" Checked="Filter_Checked" Tag="Weekly"/>
                    <RadioButton Content="Měsíční" Style="{StaticResource ToggleButtonStyle}" IsChecked="{x:Bind ViewModel.SelectedFilterType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Monthly, Mode=OneWay}" Checked="Filter_Checked" Tag="Monthly"/>
                    <RadioButton Content="Vlastní" Style="{StaticResource ToggleButtonStyle}" IsChecked="{x:Bind ViewModel.SelectedFilterType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Custom, Mode=OneWay}" Checked="Filter_Checked" Tag="Custom"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="8" Visibility="{x:Bind ViewModel.IsCustomFilterVisible, Mode=OneWay}">
                    <CalendarDatePicker Header="Od" Date="{x:Bind ViewModel.FilterStartDate, Mode=TwoWay}" HorizontalAlignment="Stretch"/>
                    <CalendarDatePicker Header="Do" Date="{x:Bind ViewModel.FilterEndDate, Mode=TwoWay}" HorizontalAlignment="Stretch"/>
                </StackPanel>
            </StackPanel>

            <ListView Grid.Row="2"
                      ItemsSource="{x:Bind ViewModel.Receipts, Mode=OneWay}"
                      SelectedItem="{x:Bind ViewModel.SelectedReceipt, Mode=TwoWay}"
                      SelectionMode="Single">
                <ListView.HeaderTemplate>
                    <DataTemplate>
                        <Grid Padding="12" Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Datum" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Text="Celkem" FontWeight="Bold"/>
                            <TextBlock Grid.Column="2" Text="Platba" FontWeight="Bold"/>
                        </Grid>
                    </DataTemplate>
                </ListView.HeaderTemplate>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Receipt">
                        <Grid Padding="12" ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{x:Bind SaleDateFormatted}" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="{x:Bind TotalAmountFormatted}" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="{x:Bind PaymentMethod}" VerticalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <!-- Detail View for Selected Receipt -->
        <Border Grid.Column="1"
                Style="{StaticResource CardBorderStyle}"
                Shadow="{ThemeResource CardShadow}"
                Visibility="{x:Bind ViewModel.IsReceiptSelected, Mode=OneWay}">
            <ScrollViewer>
                <StackPanel Spacing="12" Padding="12">
                    <TextBlock Text="Detail účtenky" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Číslo účtenky:" FontWeight="Bold"/>
                        <TextBlock Grid.Column="1" Text="{x:Bind ViewModel.SelectedReceipt.ReceiptId, Mode=OneWay}"/>
                    </Grid>
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Datum:" FontWeight="Bold"/>
                        <TextBlock Grid.Column="1" Text="{x:Bind ViewModel.SelectedReceipt.SaleDateFormatted, Mode=OneWay}"/>
                    </Grid>
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Platba:" FontWeight="Bold"/>
                        <TextBlock Grid.Column="1" Text="{x:Bind ViewModel.SelectedReceipt.PaymentMethod, Mode=OneWay}"/>
                    </Grid>

                    <ListView ItemsSource="{x:Bind ViewModel.SelectedReceipt.Items, Mode=OneWay}" Margin="0,12,0,0" SelectionMode="None">
                        <ListView.HeaderTemplate>
                            <DataTemplate>
                                <Grid Padding="8" Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Produkt" FontWeight="Bold"/>
                                    <TextBlock Grid.Column="1" Text="Množství" FontWeight="Bold" Margin="12,0"/>
                                    <TextBlock Grid.Column="2" Text="Cena/ks" FontWeight="Bold" Margin="12,0"/>
                                    <TextBlock Grid.Column="3" Text="Celkem" FontWeight="Bold" Margin="12,0"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.HeaderTemplate>
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:ReceiptItem">
                                <Grid Padding="8" ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{x:Bind ProductName}"/>
                                    <TextBlock Grid.Column="1" Text="{x:Bind Quantity}" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="2" Text="{x:Bind UnitPriceFormatted, Mode=OneWay}" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="3" Text="{x:Bind TotalPriceFormatted, Mode=OneWay}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <TextBlock Text="{x:Bind ViewModel.SelectedReceipt.TotalAmountFormatted, Mode=OneWay}"
                               Style="{ThemeResource TitleTextBlockStyle}"
                               HorizontalAlignment="Right"
                               Margin="0,12,0,0"/>

                    <Button Content="Zobrazit náhled účtenky"
                            Click="ShowPreviewButton_Click"
                            Style="{StaticResource PrimaryButtonStyle}"
                            HorizontalAlignment="Stretch"
                            Margin="0,24,0,0"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
