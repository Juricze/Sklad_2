<Page
    x:Name="page"
    x:Class="Sklad_2.Views.DatabazePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Sklad_2.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="24" RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Search and Filter Bar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12">
            <TextBox
                PlaceholderText="Hledat podle názvu nebo EAN..."
                Text="{x:Bind ViewModel.SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                MinWidth="300"/>
            <ComboBox
                Header="Kategorie"
                ItemsSource="{x:Bind ViewModel.Categories}"
                SelectedItem="{x:Bind ViewModel.SelectedCategory, Mode=TwoWay}"
                MinWidth="150"/>
        </StackPanel>

        <!-- Master-Detail Layout -->
        <Grid Grid.Row="1" ColumnSpacing="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="500"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Master: Product List (Compact) -->
            <Grid Grid.Column="0" RowSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header (outside ListView) -->
                <Grid Grid.Row="0" Padding="12,8" ColumnSpacing="8" Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="44"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="EAN" FontWeight="Bold" VerticalAlignment="Center"/>
                    <Button Grid.Column="2" Content="Název ▲▼" Command="{x:Bind ViewModel.SortByCommand}" CommandParameter="Name" Style="{ThemeResource TextBlockButtonStyle}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="3" Text="Značka" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="4" Text="Kategorie" FontWeight="Bold" VerticalAlignment="Center"/>
                    <Button Grid.Column="5" Content="Sklad ▲▼" Command="{x:Bind ViewModel.SortByCommand}" CommandParameter="StockQuantity" Style="{ThemeResource TextBlockButtonStyle}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <Button Grid.Column="6" Content="Cena ▲▼" Command="{x:Bind ViewModel.SortByCommand}" CommandParameter="SalePrice" Style="{ThemeResource TextBlockButtonStyle}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                </Grid>

                <!-- ListView without header -->
                <ListView
                    Grid.Row="1"
                    ItemsSource="{x:Bind ViewModel.FilteredProducts, Mode=OneWay}"
                    SelectedItem="{x:Bind ViewModel.SelectedProduct, Mode=TwoWay}"
                    SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Product">
                        <Grid Padding="0,6" ColumnSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="44"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1.2*"/>
                                <ColumnDefinition Width="1.2*"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>

                            <!-- Thumbnail -->
                            <Border Grid.Column="0"
                                    Width="36" Height="36"
                                    Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                    CornerRadius="4"
                                    VerticalAlignment="Center">
                                <Grid>
                                    <FontIcon Glyph="&#xE91B;"
                                              FontSize="14"
                                              Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Visibility="{x:Bind HasImage, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}"/>
                                    <Image Source="{x:Bind Ean, Converter={StaticResource EanToThumbnailConverter}}"
                                           Stretch="Uniform"
                                           Visibility="{x:Bind HasImage, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </Grid>
                            </Border>

                            <TextBlock Grid.Column="1" Text="{x:Bind Ean}" VerticalAlignment="Center" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Grid.Column="2" Text="{x:Bind Name}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>

                            <!-- Brand -->
                            <TextBlock Grid.Column="3" Text="{x:Bind BrandName}" VerticalAlignment="Center" FontSize="12" Foreground="#FF6B4EBB" TextTrimming="CharacterEllipsis"/>

                            <!-- Category -->
                            <TextBlock Grid.Column="4" Text="{x:Bind CategoryName}" VerticalAlignment="Center" FontSize="12" Foreground="#FF0078D7" TextTrimming="CharacterEllipsis"/>

                            <TextBlock Grid.Column="5" Text="{x:Bind StockQuantity}" VerticalAlignment="Center" HorizontalAlignment="Left"/>

                            <!-- Price with discount indicator -->
                            <StackPanel Grid.Column="6" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Spacing="4">
                                <Border Background="{ThemeResource AccentFillColorDefaultBrush}"
                                        CornerRadius="8"
                                        Padding="4,1"
                                        VerticalAlignment="Center"
                                        Visibility="{x:Bind IsDiscounted, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="{x:Bind DiscountPercentFormatted, Mode=OneWay}"
                                               FontSize="10"
                                               FontWeight="Bold"
                                               Foreground="White"/>
                                </Border>
                                <TextBlock Text="{x:Bind FinalPriceFormatted, Mode=OneWay}"
                                           FontWeight="SemiBold"
                                           Foreground="{x:Bind IsDiscounted, Mode=OneWay, Converter={StaticResource BooleanToDiscountColorConverter}}"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <!-- Detail Panel -->
            <Border Grid.Column="1"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8"
                    Padding="20">
                <Grid>
                    <!-- No selection placeholder -->
                    <StackPanel Visibility="{x:Bind ViewModel.IsProductSelected, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Spacing="12">
                        <FontIcon Glyph="&#xE8B9;" FontSize="48" Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                        <TextBlock Text="Vyberte produkt ze seznamu"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Product Detail -->
                    <ScrollViewer Visibility="{x:Bind ViewModel.IsProductSelected, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
                                  VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="16">

                        <!-- Product Image -->
                        <Border Width="200" Height="200"
                                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                CornerRadius="8"
                                HorizontalAlignment="Center">
                            <Grid>
                                <FontIcon Glyph="&#xE91B;"
                                          FontSize="64"
                                          Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Visibility="{Binding SelectedProduct.HasImage, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}"/>
                                <Image Source="{Binding SelectedProductImage, Mode=OneWay}"
                                       Stretch="Uniform"
                                       Visibility="{Binding SelectedProduct.HasImage, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </Grid>
                        </Border>

                        <!-- Product Name -->
                        <TextBlock Text="{Binding SelectedProduct.Name, Mode=OneWay}"
                                   Style="{ThemeResource SubtitleTextBlockStyle}"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"/>

                        <!-- EAN -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8">
                            <FontIcon Glyph="&#xED14;" FontSize="14" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Text="{Binding SelectedProduct.Ean, Mode=OneWay}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>

                        <!-- Brand & Category Badges -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8">
                            <!-- Brand Badge -->
                            <Border Background="#FFF3F0FF"
                                    CornerRadius="12"
                                    Padding="12,4"
                                    Visibility="{Binding SelectedProduct.BrandName, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <FontIcon Glyph="&#xE8B8;" FontSize="12" Foreground="#FF6B4EBB"/>
                                    <TextBlock Text="{Binding SelectedProduct.BrandName, Mode=OneWay}" Foreground="#FF6B4EBB" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>

                            <!-- Category Badge -->
                            <Border Background="#FFE6F4FF"
                                    CornerRadius="12"
                                    Padding="12,4">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <FontIcon Glyph="&#xE8FD;" FontSize="12" Foreground="#FF0078D7"/>
                                    <TextBlock Text="{Binding SelectedProduct.CategoryName, Mode=OneWay}" Foreground="#FF0078D7" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Description -->
                        <StackPanel Spacing="4"
                                    Visibility="{Binding SelectedProduct.Description, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}">
                            <TextBlock Text="Popis"
                                       FontWeight="SemiBold"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       FontSize="12"/>
                            <TextBlock Text="{Binding SelectedProduct.Description, Mode=OneWay}"
                                       TextWrapping="Wrap"
                                       Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                        </StackPanel>

                        <!-- Separator -->
                        <Border Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="0,4"/>

                        <!-- Price Section -->
                        <Grid RowSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Purchase Price -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Nákupní cena" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedProduct.PurchasePriceFormatted, Mode=OneWay}" HorizontalAlignment="Right"/>

                            <!-- Markup -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Marže" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedProduct.MarkupFormatted, Mode=OneWay}" HorizontalAlignment="Right"/>

                            <!-- Sale Price (original if discounted) -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Prodejní cena" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <StackPanel Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right">
                                <TextBlock Text="{Binding SelectedProduct.SalePriceFormatted, Mode=OneWay}"
                                           Visibility="{Binding SelectedProduct.IsDiscounted, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}"/>
                                <TextBlock Text="{Binding SelectedProduct.SalePriceFormatted, Mode=OneWay}"
                                           TextDecorations="Strikethrough"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           Visibility="{Binding SelectedProduct.IsDiscounted, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </StackPanel>

                            <!-- Discount (if applicable) -->
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Sleva"
                                       Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                       Visibility="{Binding SelectedProduct.IsDiscounted, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedProduct.DiscountPercentFormatted, Mode=OneWay}"
                                       HorizontalAlignment="Right"
                                       Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                       FontWeight="Bold"
                                       Visibility="{Binding SelectedProduct.IsDiscounted, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                            <!-- Final Price -->
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Finální cena" FontWeight="Bold"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding SelectedProduct.FinalPriceFormatted, Mode=OneWay}"
                                       HorizontalAlignment="Right"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       Foreground="{Binding SelectedProduct.IsDiscounted, Mode=OneWay, Converter={StaticResource BooleanToDiscountColorConverter}}"/>
                        </Grid>

                        <!-- Separator -->
                        <Border Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="0,4"/>

                        <!-- Stock & VAT -->
                        <Grid RowSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Stock -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Skladem" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedProduct.StockQuantity, Mode=OneWay}" HorizontalAlignment="Right" FontWeight="SemiBold"/>

                            <!-- VAT Rate (only for VAT payers) -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Sazba DPH"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       Visibility="{x:Bind ViewModel.IsVatPayer, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedProduct.VatRateFormatted, Mode=OneWay}"
                                       HorizontalAlignment="Right"
                                       Visibility="{x:Bind ViewModel.IsVatPayer, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        </Grid>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center" Margin="0,8,0,0">
                            <Button x:Name="EditButton" Click="EditButton_Click"
                                    Visibility="{x:Bind ViewModel.IsSalesOrAdmin, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE70F;" FontSize="14"/>
                                    <TextBlock Text="Upravit"/>
                                </StackPanel>
                            </Button>
                            <Button Command="{x:Bind ViewModel.DeleteProductCommand}"
                                    Visibility="{x:Bind ViewModel.IsAdmin, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE74D;" FontSize="14"/>
                                    <TextBlock Text="Smazat"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
