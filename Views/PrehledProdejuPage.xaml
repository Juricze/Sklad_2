                <!-- Top Products -->
                <Border Grid.Column="0" Style="{StaticResource CardBorderStyle}" Padding="20">
                    <StackPanel Spacing="16">
                        <TextBlock Text="ðŸ† Top 5 produktÅ¯" Style="{ThemeResource SubtitleTextBlockStyle}" FontWeight="SemiBold"/>
                        <ListView ItemsSource="{x:Bind ViewModel.TopProducts, Mode=OneWay}"
