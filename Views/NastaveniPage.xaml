<Page
    x:Class="Sklad_2.Views.NastaveniPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid Padding="24">
        <StackPanel Spacing="24">
            <!-- Nastavení tématu -->

            <!-- Zálohování databáze -->
            <Border Style="{StaticResource CardBorderStyle}" Shadow="{ThemeResource CardShadow}">
                <StackPanel Spacing="12">
                    <TextBlock Text="Správa databáze" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                    <Button Content="Zálohovat databázi" Command="{x:Bind ViewModel.BackupDatabaseCommand}" Style="{StaticResource PrimaryButtonStyle}"/>
                    <TextBlock Text="{x:Bind ViewModel.BackupStatusMessage, Mode=OneWay}" TextWrapping="Wrap" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                </StackPanel>
            </Border>

            <!-- Nastavení tiskárny -->
            <Border Style="{StaticResource CardBorderStyle}" Shadow="{ThemeResource CardShadow}">
                <StackPanel Spacing="12">
                    <TextBlock Text="Nastavení tiskárny" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                    <TextBox Header="Cesta k tiskárně (např. \\server\tiskarna)" Text="{x:Bind ViewModel.PrinterPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <Button Content="Test tisku" Command="{x:Bind ViewModel.TestPrintCommand}" Style="{StaticResource PrimaryButtonStyle}"/>
                    <TextBlock Text="{x:Bind ViewModel.TestPrintStatusMessage, Mode=OneWay}" TextWrapping="Wrap" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                </StackPanel>
            </Border>

            <!-- O aplikaci -->
            <Border Style="{StaticResource CardBorderStyle}" Shadow="{ThemeResource CardShadow}">
                <StackPanel Spacing="12">
                    <TextBlock Text="O aplikaci" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                    <TextBlock>
                        <Run Text="Verze:" FontWeight="Bold"/>
                        <Run Text="{x:Bind ViewModel.AppVersion, Mode=OneWay}"/>
                    </TextBlock>
                    <TextBlock>
                        <Run Text="GitHub:" FontWeight="Bold"/>
                        <Run Text="{x:Bind ViewModel.GitHubLink, Mode=OneWay}"/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>