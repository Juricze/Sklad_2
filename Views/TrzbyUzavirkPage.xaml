                                        <TextBlock Grid.Column="3" Text="{Binding CashSalesFormatted}" FontSize="13" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="{Binding CashSales, Converter={StaticResource AmountToBrushConverter}}"/>
                                        <TextBlock Grid.Column="4" Text="{Binding CardSalesFormatted}" FontSize="13" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="{Binding CardSales, Converter={StaticResource AmountToBrushConverter}}"/>
                                        <TextBlock Grid.Column="5" Text="{Binding TotalSalesFormatted}" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="{Binding TotalSales, Converter={StaticResource AmountToBrushConverter}}"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
