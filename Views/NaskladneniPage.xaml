<Page
    x:Class="Sklad_2.Views.NaskladneniPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid Padding="24">
        <StackPanel Spacing="24">
            <Border Style="{StaticResource CardBorderStyle}" Shadow="{ThemeResource CardShadow}" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                <StackPanel Spacing="12">
                    <TextBox Header="EAN kód" Text="{x:Bind ViewModel.Ean, Mode=TwoWay}"/>
                    <TextBox Header="Název produktu" Text="{x:Bind ViewModel.Name, Mode=TwoWay}"/>
                    <TextBox Header="Prodejní cena" Text="{x:Bind ViewModel.SalePrice, Mode=TwoWay}"/>
                    <TextBox Header="Počet kusů skladem" Text="{x:Bind ViewModel.StockQuantity, Mode=TwoWay}"/>
                </StackPanel>
            </Border>
            <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" Margin="0,12,0,0" Foreground="{ThemeResource SystemAccentColor}" TextWrapping="Wrap"/>
            <Button Content="Přidat do databáze" Style="{StaticResource PrimaryButtonStyle}" HorizontalAlignment="Stretch" Command="{x:Bind ViewModel.AddProductCommand}"/>
        </StackPanel>
    </Grid>
</Page>