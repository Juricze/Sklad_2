<Page
    x:Class="Sklad_2.Views.PrijemZboziPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid Padding="24">
        <StackPanel Spacing="24" MaxWidth="500">
            <Border Style="{StaticResource CardBorderStyle}" Shadow="{ThemeResource CardShadow}" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                <StackPanel Spacing="12">
                    <TextBox x:Name="EanTextBox" Header="EAN kód (načtěte nebo zadejte)" 
                             Text="{x:Bind ViewModel.Ean, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             KeyDown="EanTextBox_KeyDown"/>
                    
                    <!-- Found Product Details -->
                    <StackPanel Visibility="{x:Bind ViewModel.IsProductFound, Mode=OneWay}" Spacing="4">
                        <TextBlock Text="Nalezený produkt:" FontWeight="Bold"/>
                        <TextBlock>
                            <Run Text="Název: "/><Run Text="{x:Bind ViewModel.FoundProduct.Name, Mode=OneWay}"/>
                        </TextBlock>
                        <TextBlock>
                            <Run Text="Kategorie: "/><Run Text="{x:Bind ViewModel.FoundProduct.Category, Mode=OneWay}"/>
                        </TextBlock>
                        <TextBlock>
                            <Run Text="Aktuálně skladem: "/><Run Text="{x:Bind ViewModel.FoundProduct.StockQuantity, Mode=OneWay}"/> <Run Text="ks"/>
                        </TextBlock>
                    </StackPanel>

                    <!-- Stocking Quantity and Button (Visible only if product found) -->
                    <StackPanel Visibility="{x:Bind ViewModel.IsProductFound, Mode=OneWay}" Spacing="12">
                        <TextBox x:Name="StockQuantityTextBox" 
                                 Header="Počet kusů k naskladnění" 
                                 Text="{x:Bind ViewModel.StockQuantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 KeyDown="StockQuantityTextBox_KeyDown"/>
                        <Button Content="Přidat na sklad" Style="{StaticResource PrimaryButtonStyle}" HorizontalAlignment="Stretch" Command="{x:Bind ViewModel.AddToStockCommand}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" Margin="0,12,0,0" Foreground="{ThemeResource AccentFillColorDefaultBrush}" TextWrapping="Wrap" FontWeight="Bold"/>
            <Button Content="Vyčistit" Style="{StaticResource PrimaryButtonStyle}" HorizontalAlignment="Stretch" Command="{x:Bind ViewModel.ClearFormCommand}"/>
        </StackPanel>
    </Grid>
</Page>
