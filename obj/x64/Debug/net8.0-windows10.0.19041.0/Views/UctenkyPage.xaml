<Page x:ConnectionId='1'
    x:Class="Sklad_2.Views.UctenkyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Sklad_2.Models"
    xmlns:viewmodels="using:Sklad_2.ViewModels"
    xmlns:converters="using:Sklad_2.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        >
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Controls.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:AmountToBrushConverter x:Key="AmountToBrushConverter"/>
        </ResourceDictionary>
    </Page.Resources>
    <Grid Padding="24" ColumnSpacing="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="420"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Master List of Receipts -->
        <Grid Grid.Column="0" RowSpacing="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Seznam účtenek" Style="{ThemeResource TitleTextBlockStyle}"/>

            <StackPanel Grid.Row="1" Orientation="Vertical" Spacing="8" Margin="0,12,0,0">
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <RadioButton x:ConnectionId='40' Content="Denní" Style="{StaticResource ToggleButtonStyle}"                                                                                                                                                                      Tag="Daily"/>
                    <RadioButton x:ConnectionId='41' Content="Týdenní" Style="{StaticResource ToggleButtonStyle}"                                                                                                                                                                       Tag="Weekly"/>
                    <RadioButton x:ConnectionId='42' Content="Měsíční" Style="{StaticResource ToggleButtonStyle}"                                                                                                                                                                        Tag="Monthly"/>
                    <RadioButton x:ConnectionId='43' Content="Vlastní" Style="{StaticResource ToggleButtonStyle}"                                                                                                                                                                       Tag="Custom"/>
                </StackPanel>
                <StackPanel x:ConnectionId='37' Orientation="Horizontal" Spacing="8"                                                                   >
                    <CalendarDatePicker x:ConnectionId='38' Header="Od"                                                        HorizontalAlignment="Stretch"/>
                    <CalendarDatePicker x:ConnectionId='39' Header="Do"                                                      HorizontalAlignment="Stretch"/>
                </StackPanel>
            </StackPanel>

            <ListView x:ConnectionId='29' Grid.Row="2"
                                                                            
                                                                                    
                      SelectionMode="Single">
                <ListView.HeaderTemplate>
                    <DataTemplate>
                        <Grid Padding="12" Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="1.5*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Datum" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Text="Celkem" FontWeight="Bold"/>
                            <TextBlock Grid.Column="2" Text="Platba" FontWeight="Bold"/>
                            <TextBlock Grid.Column="3" Text="Prodavač" FontWeight="Bold"/>
                        </Grid>
                    </DataTemplate>
                </ListView.HeaderTemplate>
                <ListView.ItemTemplate>
                    <DataTemplate                            >
                        <Grid x:ConnectionId='32' Padding="12" ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="1.5*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" VerticalAlignment="Center">
                                <Run x:ConnectionId='35'                                />
                                <Run x:ConnectionId='36'                                  />
                            </TextBlock>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding AmountToPayFormatted, Mode=OneWay}"
                                       VerticalAlignment="Center"
                                       Foreground="{Binding AmountToPay, Mode=OneWay, Converter={StaticResource AmountToBrushConverter}}"/>
                            <TextBlock x:ConnectionId='33' Grid.Column="2"                               VerticalAlignment="Center"/>
                            <TextBlock x:ConnectionId='34' Grid.Column="3"                            VerticalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <!-- Detail View for Selected Receipt -->
        <Border x:ConnectionId='2' Grid.Column="1"
                Style="{StaticResource CardBorderStyle}"
                Shadow="{ThemeResource CardShadow}"
                                                                              >
            <ScrollViewer>
                <StackPanel Spacing="12" Padding="12">
                    <TextBlock Text="Detail účtenky" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                    <!-- Storno Warning Banner -->
                    <Border x:ConnectionId='3' Background="#FFEBEE"
                            BorderBrush="#FF3B30"
                            BorderThickness="2"
                            CornerRadius="4"
                            Padding="12"
                                                                                                 >
                        <StackPanel Spacing="4">
                            <TextBlock FontWeight="Bold" Foreground="#FF3B30">
                                <Run Text="❌ STORNO ÚČTENKA"/>
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" FontSize="12">
                                <Run Text="Tato účtenka stornuje původní účtenku č."/>
                                <Run x:ConnectionId='28'                                                                          FontWeight="Bold"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Číslo účtenky:" FontWeight="Bold"/>
                        <TextBlock x:ConnectionId='27' Grid.Column="1"                                                                              />
                    </Grid>
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Datum:" FontWeight="Bold"/>
                        <TextBlock x:ConnectionId='26' Grid.Column="1"                                                                         />
                    </Grid>
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Platba:" FontWeight="Bold"/>
                        <TextBlock x:ConnectionId='25' Grid.Column="1"                                                                     />
                    </Grid>
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Prodavač:" FontWeight="Bold"/>
                        <TextBlock x:ConnectionId='24' Grid.Column="1"                                                                  />
                    </Grid>

                    <ListView x:ConnectionId='4'                                                                     Margin="0,12,0,0" SelectionMode="None">
                        <ListView.HeaderTemplate>
                            <DataTemplate>
                                <Grid Padding="8" Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Produkt" FontWeight="Bold"/>
                                    <TextBlock Grid.Column="1" Text="Množství" FontWeight="Bold" Margin="12,0"/>
                                    <TextBlock Grid.Column="2" Text="Cena/ks" FontWeight="Bold" Margin="12,0"/>
                                    <TextBlock Grid.Column="3" Text="Celkem" FontWeight="Bold" Margin="12,0"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.HeaderTemplate>
                        <ListView.ItemTemplate>
                            <DataTemplate                                >
                                <StackPanel x:ConnectionId='15' Padding="8">
                                    <Grid ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock x:ConnectionId='20' Grid.Column="0"                             VerticalAlignment="Center"/>
                                        <TextBlock x:ConnectionId='21' Grid.Column="1"                          HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                        <TextBlock x:ConnectionId='22' Grid.Column="2"                                                 HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                        <TextBlock x:ConnectionId='23' Grid.Column="3"                                                  FontWeight="SemiBold" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                    </Grid>
                                    
                                    <!-- Show discount info if item has discount -->
                                    <TextBlock x:ConnectionId='16' Style="{ThemeResource CaptionTextBlockStyle}" 
                                               Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                                                                                                                                      
                                               Margin="0,2,0,0">
                                        <Run Text="  Sleva "/><Run x:ConnectionId='17'                                                      />
                                        <Run Text=" ("/>
                                        <Run x:ConnectionId='18'                                            />
                                        <Run Text=") z "/><Run x:ConnectionId='19'                                                        />
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- Receipt Summary -->
                    <StackPanel HorizontalAlignment="Right" Margin="0,12,0,0" Spacing="4">
                        <TextBlock Text="CELKEM POLOŽKY" Style="{ThemeResource CaptionTextBlockStyle}" HorizontalAlignment="Right"/>
                        <TextBlock x:ConnectionId='6'                                                                            
                                   Style="{ThemeResource SubtitleTextBlockStyle}"
                                   HorizontalAlignment="Right"/>

                        <!-- Dárkový poukaz (pokud byl použit) -->
                        <StackPanel x:ConnectionId='7'                                                                                         Margin="0,8,0,0">
                            <TextBlock Text="Dárkový poukaz:" Style="{ThemeResource CaptionTextBlockStyle}" HorizontalAlignment="Right"/>
                            <TextBlock x:ConnectionId='12'                                                                                         
                                       Style="{ThemeResource SubtitleTextBlockStyle}"
                                       HorizontalAlignment="Right"
                                       Foreground="#34C759"/>
                        </StackPanel>

                        <!-- K úhradě (pokud byl použit poukaz) -->
                        <StackPanel x:ConnectionId='8'                                                                                         Margin="0,8,0,0">
                            <Rectangle Height="1" Fill="{ThemeResource CardStrokeColorDefaultBrush}" Margin="0,0,0,8"/>
                            <TextBlock Text="K ÚHRADĚ" Style="{ThemeResource SubtitleTextBlockStyle}" HorizontalAlignment="Right"/>
                            <TextBlock x:ConnectionId='11'                                                            
                                       Style="{ThemeResource TitleTextBlockStyle}"
                                       HorizontalAlignment="Right"
                                       FontWeight="Bold"/>
                        </StackPanel>

                        <!-- Celkem uhrazeno (pokud NEBYL použit poukaz) -->
                        <StackPanel x:ConnectionId='9'                                                                                                                                                                              Margin="0,8,0,0">
                            <Rectangle Height="1" Fill="{ThemeResource CardStrokeColorDefaultBrush}" Margin="0,0,0,8"/>
                            <TextBlock Text="CELKEM UHRAZENO" Style="{ThemeResource SubtitleTextBlockStyle}" HorizontalAlignment="Right"/>
                            <TextBlock x:ConnectionId='10'                                                                            
                                       Style="{ThemeResource TitleTextBlockStyle}"
                                       HorizontalAlignment="Right"
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>

                    <Button x:ConnectionId='5' Content="Zobrazit náhled účtenky"
                                                           
                            Style="{StaticResource PrimaryButtonStyle}"
                            HorizontalAlignment="Stretch"
                            Margin="0,24,0,0"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>

