<Page x:ConnectionId='1'
    x:Class="Sklad_2.Views.DatabazePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Sklad_2.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="24" RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12">
            <TextBox x:ConnectionId='15'
                PlaceholderText="Hledat podle názvu nebo EAN..."
                                                                                                      
                MinWidth="300"/>
            <ComboBox x:ConnectionId='16'
                Header="Kategorie"
                                                           
                                                                               
                MinWidth="150"/>
            <Button x:ConnectionId='17'                                                  >
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE74D;"/>
                    <TextBlock Text="Smazat vybrané"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <ListView x:ConnectionId='2' 
            Grid.Row="1"
                                                                          
                                                                          
            SelectionMode="Single">
            <ListView.Header>
                <Grid Padding="12" Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="EAN" FontWeight="Bold" VerticalAlignment="Center"/>
                    <Button x:ConnectionId='3' Grid.Column="1" Content="Název ▲▼"                                            CommandParameter="Name" Style="{ThemeResource TextBlockButtonStyle}" FontWeight="Bold" HorizontalAlignment="Left"/>
                    <TextBlock Grid.Column="2" Text="Kategorie" FontWeight="Bold" VerticalAlignment="Center"/>
                    <Button x:ConnectionId='4' Grid.Column="3" Content="Skladem ▲▼"                                            CommandParameter="StockQuantity" Style="{ThemeResource TextBlockButtonStyle}" FontWeight="Bold" HorizontalAlignment="Left"/>
                    <TextBlock Grid.Column="4" Text="Sazba DPH" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="5" Text="Nákupní cena" FontWeight="Bold" VerticalAlignment="Center"/>
                    <Button x:ConnectionId='5' Grid.Column="6" Content="Prodejní cena ▲▼"                                            CommandParameter="SalePrice" Style="{ThemeResource TextBlockButtonStyle}" FontWeight="Bold" HorizontalAlignment="Left"/>
                </Grid>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate                            >
                    <Grid x:ConnectionId='7' Padding="12" ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:ConnectionId='8' Grid.Column="0"                     VerticalAlignment="Center"/>
                        <TextBlock x:ConnectionId='9' Grid.Column="1"                      VerticalAlignment="Center"/>
                        <TextBlock x:ConnectionId='10' Grid.Column="2"                          VerticalAlignment="Center"/>
                        <TextBlock x:ConnectionId='11' Grid.Column="3"                               VerticalAlignment="Center"/>
                        <TextBlock x:ConnectionId='12' Grid.Column="4"                                               VerticalAlignment="Center"/>
                        <TextBlock x:ConnectionId='13' Grid.Column="5"                                                     VerticalAlignment="Center"/>
                        <TextBlock x:ConnectionId='14' Grid.Column="6"                                                 VerticalAlignment="Center"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

