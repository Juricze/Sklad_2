<ContentDialog x:ConnectionId='1'
    x:Class="Sklad_2.Views.Dialogs.ReceiptPreviewDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Sklad_2.Models"
    xmlns:converters="using:Sklad_2.Converters"
    xmlns:dialogs="using:Sklad_2.Views.Dialogs"
    mc:Ignorable="d"
    Title="Náhled účtenky"
    CloseButtonText="Zavřít"
    PrimaryButtonText="Tisk"
    DefaultButton="Close"
                                          >

    <ContentDialog.Resources>
        <converters:PaymentMethodToVisibilityConverter x:Key="PaymentMethodToVisibilityConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </ContentDialog.Resources>

    <StackPanel Spacing="16" MinWidth="400">
        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="500">
            <StackPanel Spacing="16">
                <!-- Hlavička -->
                <StackPanel HorizontalAlignment="Center" Spacing="4">
                    <TextBlock x:ConnectionId='30'                                               Style="{ThemeResource TitleTextBlockStyle}" HorizontalAlignment="Center"/>
                    <TextBlock x:ConnectionId='31'                                                  HorizontalAlignment="Center"/>
                    <TextBlock HorizontalAlignment="Center">
                        <Run Text="IČ: "/><Run x:ConnectionId='34'                                               />
                    </TextBlock>
                    <TextBlock x:ConnectionId='32' HorizontalAlignment="Center"                                                                                                               >
                        <Run Text="DIČ: "/><Run x:ConnectionId='33'                                           />
                    </TextBlock>
                </StackPanel>

                <Rectangle Height="1" Fill="{ThemeResource CardStrokeColorDefaultBrush}"/>

                <!-- Informace o dokladu -->
                <StackPanel HorizontalAlignment="Center" Spacing="0">
                    <TextBlock Text="ÚČTENKA" Style="{ThemeResource SubtitleTextBlockStyle}" HorizontalAlignment="Center"/>
                    <TextBlock x:ConnectionId='29' Text="DAŇOVÝ DOKLAD" Style="{ThemeResource CaptionTextBlockStyle}" HorizontalAlignment="Center"
                                                                                                                                             />
                </StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0">
                        <Run Text="Číslo dokladu: "/><Run x:ConnectionId='28'                                                            />
                    </TextBlock>
                    <TextBlock Grid.Column="1" HorizontalAlignment="Right">
                        <Run Text="Datum: "/><Run x:ConnectionId='27'                                                       />
                    </TextBlock>
                </Grid>
                <TextBlock HorizontalAlignment="Left">
                    <Run Text="Prodavač: "/><Run x:ConnectionId='26'                                                />
                </TextBlock>

                <Rectangle Height="1" Fill="{ThemeResource CardStrokeColorDefaultBrush}"/>

                <!-- Položky -->
                <Grid Padding="8" Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Položka" FontWeight="Bold"/>
                    <TextBlock x:ConnectionId='25' Grid.Column="1" Text="Sazba DPH" FontWeight="Bold" Margin="12,0"
                                                                                                                                             />
                    <TextBlock Grid.Column="2" Text="Celkem" FontWeight="Bold" HorizontalAlignment="Right"/>
                </Grid>
                <ItemsRepeater x:ConnectionId='2'                                                  >
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate                                >
                            <StackPanel x:ConnectionId='19' Padding="8">
                                <Grid ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock x:ConnectionId='22' Grid.Column="0"                            />
                                    <TextBlock x:ConnectionId='23' Grid.Column="1"                                              
                                               Visibility="{Binding Receipt.IsVatPayer, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    <TextBlock x:ConnectionId='24' Grid.Column="2"                                                  FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                </Grid>
                                <TextBlock Style="{ThemeResource CaptionTextBlockStyle}">
                                    <Run x:ConnectionId='20'                         /><Run Text=" ks x "/><Run x:ConnectionId='21'                                                />
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>

                <Rectangle Height="1" Fill="{ThemeResource CardStrokeColorDefaultBrush}"/>

                <!-- Souhrn DPH -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel x:ConnectionId='3' Grid.Column="0" Spacing="4"
                                                                                                                                              >
                        <TextBlock Text="Souhrn DPH" FontWeight="Bold"/>
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Sazba"/>
                            <TextBlock Grid.Column="1" Text="Základ" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Column="2" Text="DPH" HorizontalAlignment="Right"/>
                        </Grid>
                        <ItemsRepeater x:ConnectionId='12'                                                 >
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate                               >
                                    <Grid x:ConnectionId='14' ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock x:ConnectionId='15' Grid.Column="0"                                              />
                                        <TextBlock x:ConnectionId='16' Grid.Column="1"                                                             HorizontalAlignment="Right"/>
                                        <TextBlock x:ConnectionId='17' Grid.Column="2"                                                      HorizontalAlignment="Right"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                    </StackPanel>

                    <!-- Celkem -->
                    <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                        <TextBlock Text="CELKEM POLOŽKY" Style="{ThemeResource CaptionTextBlockStyle}"/>
                        <TextBlock x:ConnectionId='4'                                                           Style="{ThemeResource SubtitleTextBlockStyle}" HorizontalAlignment="Right"/>

                        <!-- Dárkový poukaz (pokud byl použit) -->
                        <StackPanel x:ConnectionId='5'                                                                                                                                Margin="0,8,0,0">
                            <TextBlock Text="Dárkový poukaz:" Style="{ThemeResource CaptionTextBlockStyle}" HorizontalAlignment="Right"/>
                            <TextBlock x:ConnectionId='11'                                                                        Style="{ThemeResource SubtitleTextBlockStyle}" HorizontalAlignment="Right" Foreground="#34C759"/>
                        </StackPanel>

                        <!-- K úhradě -->
                        <Rectangle Height="1" Fill="{ThemeResource CardStrokeColorDefaultBrush}" Margin="0,12"/>
                        <TextBlock Text="K ÚHRADĚ" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                        <TextBlock x:ConnectionId='6'                                                                                        Style="{ThemeResource TitleTextBlockStyle}" HorizontalAlignment="Right" FontWeight="Bold"/>

                        <TextBlock x:ConnectionId='7' Text="HRAZENO KARTOU" Style="{ThemeResource SubtitleTextBlockStyle}" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,12,0,0"
                                                                                                                                                                                       />

                        <StackPanel x:ConnectionId='8'                                                                                                                                                     >
                            <TextBlock Text="Obdržená hotovost:" Style="{ThemeResource CaptionTextBlockStyle}" Margin="0,12,0,0" HorizontalAlignment="Right"/>
                            <TextBlock x:ConnectionId='9'                                                                                           Style="{ThemeResource SubtitleTextBlockStyle}" HorizontalAlignment="Right"/>

                            <TextBlock Text="Vráceno:" Style="{ThemeResource CaptionTextBlockStyle}" Margin="0,4,0,0" HorizontalAlignment="Right"/>
                            <TextBlock x:ConnectionId='10'                                                                                         Style="{ThemeResource SubtitleTextBlockStyle}" HorizontalAlignment="Right"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </StackPanel>
</ContentDialog>

