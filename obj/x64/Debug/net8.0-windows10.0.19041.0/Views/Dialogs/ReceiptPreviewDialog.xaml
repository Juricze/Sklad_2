<ContentDialog x:ConnectionId='1'
    x:Class="Sklad_2.Views.Dialogs.ReceiptPreviewDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Sklad_2.Models"
    xmlns:converters="using:Sklad_2.Converters"
    xmlns:dialogs="using:Sklad_2.Views.Dialogs"
    mc:Ignorable="d"
    Title="Náhled účtenky"
    CloseButtonText="Zavřít"
    PrimaryButtonText="Tisk"
    DefaultButton="Close"
                                          >

    <ContentDialog.Resources>
        <converters:PaymentMethodToVisibilityConverter x:Key="PaymentMethodToVisibilityConverter"/>
    </ContentDialog.Resources>

    <StackPanel Spacing="16" MinWidth="400">
        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="500">
            <StackPanel Spacing="16">
                <!-- Hlavička -->
                <StackPanel HorizontalAlignment="Center" Spacing="4">
                    <TextBlock x:ConnectionId='23'                                               Style="{ThemeResource TitleTextBlockStyle}" HorizontalAlignment="Center"/>
                    <TextBlock x:ConnectionId='24'                                                  HorizontalAlignment="Center"/>
                    <TextBlock HorizontalAlignment="Center">
                        <Run Text="IČ: "/><Run x:ConnectionId='25'                                               />
                        <Run Text=" | DIČ: "/><Run x:ConnectionId='26'                                           />
                    </TextBlock>
                </StackPanel>

                <Rectangle Height="1" Fill="{ThemeResource CardStrokeColorDefaultBrush}"/>

                <!-- Informace o dokladu -->
                <TextBlock Text="ÚČTENKA - DAŇOVÝ DOKLAD" Style="{ThemeResource SubtitleTextBlockStyle}" HorizontalAlignment="Center"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0">
                        <Run Text="Číslo dokladu: "/><Run x:ConnectionId='22'                                               />
                    </TextBlock>
                    <TextBlock Grid.Column="1" HorizontalAlignment="Right">
                        <Run Text="Datum: "/><Run x:ConnectionId='21'                                                       />
                    </TextBlock>
                </Grid>

                <Rectangle Height="1" Fill="{ThemeResource CardStrokeColorDefaultBrush}"/>

                <!-- Položky -->
                <Grid Padding="8" Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Položka" FontWeight="Bold"/>
                    <TextBlock Grid.Column="1" Text="Sazba DPH" FontWeight="Bold" Margin="12,0"/>
                    <TextBlock Grid.Column="2" Text="Celkem" FontWeight="Bold" HorizontalAlignment="Right"/>
                </Grid>
                <ItemsRepeater x:ConnectionId='2'                                                  >
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate                                >
                            <StackPanel x:ConnectionId='15' Padding="8">
                                <Grid ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock x:ConnectionId='18' Grid.Column="0"                            />
                                    <TextBlock x:ConnectionId='19' Grid.Column="1"                                              />
                                    <TextBlock x:ConnectionId='20' Grid.Column="2"                                                  FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                </Grid>
                                <TextBlock Style="{ThemeResource CaptionTextBlockStyle}">
                                    <Run x:ConnectionId='16'                         /><Run Text=" ks x "/><Run x:ConnectionId='17'                                                />
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>

                <Rectangle Height="1" Fill="{ThemeResource CardStrokeColorDefaultBrush}"/>

                <!-- Souhrn DPH -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Spacing="4">
                        <TextBlock Text="Souhrn DPH" FontWeight="Bold"/>
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Sazba"/>
                            <TextBlock Grid.Column="1" Text="Základ" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Column="2" Text="DPH" HorizontalAlignment="Right"/>
                        </Grid>
                        <ItemsRepeater x:ConnectionId='8'                                                 >
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate                               >
                                    <Grid x:ConnectionId='10' ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock x:ConnectionId='11' Grid.Column="0"                                              />
                                        <TextBlock x:ConnectionId='12' Grid.Column="1"                                                             HorizontalAlignment="Right"/>
                                        <TextBlock x:ConnectionId='13' Grid.Column="2"                                                      HorizontalAlignment="Right"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                    </StackPanel>

                    <!-- Celkem -->
                    <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                        <TextBlock Text="CELKEM UHRAZENO" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                        <TextBlock x:ConnectionId='3'                                                           Style="{ThemeResource TitleTextBlockStyle}" HorizontalAlignment="Right"/>

                        <TextBlock x:ConnectionId='4' Text="HRAZENO KARTOU" Style="{ThemeResource SubtitleTextBlockStyle}" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,12,0,0"
                                                                                                                                                                                       />

                        <StackPanel x:ConnectionId='5'                                                                                                                                                     >
                            <TextBlock Text="Obdržená hotovost:" Style="{ThemeResource CaptionTextBlockStyle}" Margin="0,12,0,0" HorizontalAlignment="Right"/>
                            <TextBlock x:ConnectionId='6'                                                                                           Style="{ThemeResource SubtitleTextBlockStyle}" HorizontalAlignment="Right"/>

                            <TextBlock Text="Vráceno:" Style="{ThemeResource CaptionTextBlockStyle}" Margin="0,4,0,0" HorizontalAlignment="Right"/>
                            <TextBlock x:ConnectionId='7'                                                                                         Style="{ThemeResource SubtitleTextBlockStyle}" HorizontalAlignment="Right"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </StackPanel>
</ContentDialog>

