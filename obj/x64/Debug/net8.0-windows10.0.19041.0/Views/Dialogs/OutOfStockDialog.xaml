<ContentDialog
    x:Class="Sklad_2.Views.Dialogs.OutOfStockDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Sklad_2.Views.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Produkt není skladem"
    PrimaryButtonText="OK"
    DefaultButton="Primary">

    <StackPanel Spacing="10">
        <TextBlock Text="Produkt nelze přidat do účtenky z důvodu nedostatečné zásoby." TextWrapping="Wrap"/>
        <TextBlock x:ConnectionId='2' x:Name="MessageTextBlock" TextWrapping="Wrap"/>
    </StackPanel>
</ContentDialog>

