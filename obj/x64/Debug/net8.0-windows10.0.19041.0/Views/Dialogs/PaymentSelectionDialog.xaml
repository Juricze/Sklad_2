<ContentDialog x:ConnectionId='1'
    x:Class="Sklad_2.Views.Dialogs.PaymentSelectionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:Sklad_2.Converters"
    mc:Ignorable="d"
    Title="Vyberte způsob platby"
    CloseButtonText="Zrušit">

    <StackPanel Spacing="24" MinWidth="300">
        <TextBlock Text="Celkem k úhradě:" Style="{ThemeResource SubtitleTextBlockStyle}"/>
        <TextBlock x:ConnectionId='2'                                                                                       Style="{ThemeResource TitleTextBlockStyle}" FontWeight="Bold"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="16">
            <Button x:ConnectionId='3' Content="Hotově"                          Style="{StaticResource AccentButtonStyle}" Width="120"/>
            <Button x:ConnectionId='4' Content="Kartou"                          Style="{StaticResource AccentButtonStyle}" Width="120"/>
        </StackPanel>
    </StackPanel>
</ContentDialog>

