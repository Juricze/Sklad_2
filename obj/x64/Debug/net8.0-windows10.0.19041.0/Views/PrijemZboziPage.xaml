<Page x:ConnectionId='1'
    x:Class="Sklad_2.Views.PrijemZboziPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid Padding="24">
        <StackPanel Spacing="24" MaxWidth="500">
            <Border Style="{StaticResource CardBorderStyle}" Shadow="{ThemeResource CardShadow}" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                <StackPanel Spacing="12">
                    <TextBox x:ConnectionId='4' x:Name="EanTextBox" Header="EAN kód (načtěte nebo zadejte)" 
                                                                                                            
                                                         />
                    
                    <!-- Found Product Details -->
                    <StackPanel x:ConnectionId='5'                                                             Spacing="4">
                        <TextBlock Text="Nalezený produkt:" FontWeight="Bold"/>
                        <TextBlock>
                            <Run Text="Název: "/><Run x:ConnectionId='11'                                                         />
                        </TextBlock>
                        <TextBlock>
                            <Run Text="Kategorie: "/><Run x:ConnectionId='10'                                                             />
                        </TextBlock>
                        <TextBlock>
                            <Run Text="Aktuálně skladem: "/><Run x:ConnectionId='9'                                                                  /> <Run Text="ks"/>
                        </TextBlock>
                    </StackPanel>

                    <!-- Stocking Quantity and Button (Visible only if product found) -->
                    <StackPanel x:ConnectionId='6'                                                             Spacing="12">
                        <TextBox x:ConnectionId='7' x:Name="StockQuantityTextBox" 
                                 Header="Počet kusů k naskladnění" 
                                                                                                                          
                                                                       />
                        <Button x:ConnectionId='8' Content="Přidat na sklad" Style="{StaticResource PrimaryButtonStyle}" HorizontalAlignment="Stretch"                                               />
                    </StackPanel>
                </StackPanel>
            </Border>
            <TextBlock x:ConnectionId='2'                                                      Margin="0,12,0,0" Foreground="{ThemeResource AccentFillColorDefaultBrush}" TextWrapping="Wrap" FontWeight="Bold"/>
            <Button x:ConnectionId='3' Content="Vyčistit" Style="{StaticResource PrimaryButtonStyle}" HorizontalAlignment="Stretch"                                              />
        </StackPanel>
    </Grid>
</Page>

