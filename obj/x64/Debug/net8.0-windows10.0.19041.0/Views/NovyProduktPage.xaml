<Page x:ConnectionId='1'
    x:Class="Sklad_2.Views.NovyProduktPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="24">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="24" MaxWidth="500">
            <Border Style="{StaticResource CardBorderStyle}" Shadow="{ThemeResource CardShadow}" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                <StackPanel Spacing="12">
                    <TextBox x:ConnectionId='4' Header="EAN kód"                                                                                                                                                                                                                          />
                    <TextBox x:ConnectionId='5' Header="Název produktu"                                                                                                                                                                                                                           />
                    <ComboBox x:ConnectionId='6' Header="Kategorie" 
                                                                         
                                                                                                                                                                                                                                       />
                    <TextBox x:ConnectionId='7' Header="Nákupní cena (Kč)"                                                                                                                                                                                                                                    />
                    <TextBox x:ConnectionId='8' Header="Prodejní cena (Kč)"                                                                                                                                                                                                                                />
                    <StackPanel x:ConnectionId='9'                                                                                                                 >
                        <TextBlock Text="Sazba DPH" Style="{ThemeResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock x:ConnectionId='19'                                                       Style="{ThemeResource BodyStrongTextBlockStyle}" Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Discount Section -->
                    <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="4" Padding="12" Margin="0,8,0,0">
                        <StackPanel Spacing="8">
                            <CheckBox x:ConnectionId='10' Content="Zlevněný produkt" 
                                                                                             
                                                                                         />
                            
                            <StackPanel x:ConnectionId='11'                                                                                                                   
                                        Spacing="8">
                                <NumberBox x:ConnectionId='12' Header="Sleva (%)" 
                                           Minimum="0" 
                                           Maximum="100"
                                           SpinButtonPlacementMode="Inline"
                                                                                                  
                                                                                              />
                                
                                <ComboBox x:ConnectionId='13' Header="Důvod slevy"
                                                                                          
                                                                                                               
                                                                                             />
                                
                                <CheckBox x:ConnectionId='14' Content="Do vyprodání zásob (bez expirace)" 
                                                                                                      
                                                                                             />
                                
                                <DatePicker x:ConnectionId='15' Header="Platnost od" 
                                                                                                    
                                                                                               
                                                                                                                                                                   />
                                
                                <DatePicker x:ConnectionId='16' Header="Platnost do" 
                                                                                                  
                                                                                               
                                                                                                                                                                   />
                                
                                <TextBlock x:ConnectionId='17' Text="💡 Sleva 'Do vyprodání zásob' platí dokud není vše prodáno"
                                           FontSize="12"
                                           Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                           TextWrapping="Wrap"
                                                                                                                                                                 />
                                
                                <TextBlock x:ConnectionId='18'                                                          
                                           Style="{ThemeResource BodyStrongTextBlockStyle}" 
                                           Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </Border>
            <TextBlock x:ConnectionId='2'                                                      Margin="0,12,0,0" Foreground="{ThemeResource AccentFillColorDefaultBrush}" TextWrapping="Wrap" FontWeight="Bold"/>
            <Button x:ConnectionId='3' Content="Přidat nový produkt" Style="{StaticResource PrimaryButtonStyle}" HorizontalAlignment="Stretch"                                                                                                                                                                                            />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

