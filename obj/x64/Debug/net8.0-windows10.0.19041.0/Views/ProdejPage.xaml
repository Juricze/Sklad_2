<Page x:ConnectionId='1'
    x:Class="Sklad_2.Views.ProdejPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Sklad_2.Models"
    xmlns:services="using:Sklad_2.Services"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid Padding="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="420"/>
        </Grid.ColumnDefinitions>

        <!-- Main content area -->
        <StackPanel Grid.Column="0" Margin="0,0,24,0" Spacing="24">
            <Border Style="{StaticResource CardBorderStyle}" Shadow="{ThemeResource CardShadow}">
                <TextBox x:ConnectionId='47' x:Name="EanTextBox" Header="EAN kód produktu" PlaceholderText="Naskenujte nebo zadejte kód..."                             />
            </Border>
            <Border x:ConnectionId='26' Style="{StaticResource CardBorderStyle}" Shadow="{ThemeResource CardShadow}"                                                            >
                <StackPanel Spacing="6">
                    <TextBlock Text="Poslední skenovaný produkt" Style="{ThemeResource TitleTextBlockStyle}"/>
                    <TextBlock><Run Text="Název:" FontWeight="Bold"/> <Run x:ConnectionId='46'                                                           /></TextBlock>
                    <StackPanel>
                        <TextBlock>
                            <Run Text="Cena:" FontWeight="Bold"/> 
                            <Run x:ConnectionId='45'                                                                          />
                        </TextBlock>
                        <TextBlock x:ConnectionId='41'                                                                                                                                  
                                   Foreground="{ThemeResource AccentFillColorDefaultBrush}">
                            <Run Text="Původní cena:"/>
                            <Run x:ConnectionId='42'                                                                         />
                            <Run Text=" • Sleva"/>
                            <Run x:ConnectionId='43'                                                                               />
                            <Run Text=" ("/>
                            <Run x:ConnectionId='44'                                                                     />
                            <Run Text=")"/>
                        </TextBlock>
                    </StackPanel>
                    <TextBlock><Run Text="Skladem:" FontWeight="Bold"/> <Run x:ConnectionId='40'                                                                    /> <Run Text="ks"/></TextBlock>
                </StackPanel>
            </Border>

            <!-- Gift Card Redemption Section -->
            <Border Style="{StaticResource CardBorderStyle}" Shadow="{ThemeResource CardShadow}">
                <StackPanel Spacing="12">
                    <StackPanel Spacing="4">
                        <TextBlock Text="Uplatnit dárkový poukaz" Style="{ThemeResource TitleTextBlockStyle}"/>
                        <TextBlock Text="💡 Pro platbu poukazem (ne prodej poukazu) - skenujte poukaz do tohoto pole, ne do pole pro produkty výše!"
                                   FontSize="12"
                                   Opacity="0.7"
                                   TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Input for Gift Card EAN -->
                    <StackPanel Spacing="8">
                        <TextBox x:ConnectionId='38' x:Name="GiftCardEanTextBox"
                                 Header="EAN kód poukazu k uplatnění"
                                 PlaceholderText="Naskenujte nebo zadejte EAN poukazu..."
                                                                                                                             
                                                                     />
                        <Button x:ConnectionId='39' Content="Načíst poukaz"
                                                                
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>

                    <!-- Loaded Gift Card Info -->
                    <Border x:ConnectionId='32' Background="#E8F5E9"
                            BorderBrush="#4CAF50"
                            BorderThickness="2"
                            CornerRadius="8"
                            Padding="12"
                                                                                        >
                        <StackPanel Spacing="6">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE8A1;" Foreground="#4CAF50" FontSize="20"/>
                                <TextBlock Text="Poukaz načten pro platbu" FontWeight="SemiBold" Foreground="#4CAF50" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock>
                                <Run Text="Hodnota:"/>
                                <Run x:ConnectionId='37'                                                               FontWeight="Bold"/>
                            </TextBlock>
                            <TextBlock>
                                <Run Text="EAN:"/>
                                <Run x:ConnectionId='36'                                                            FontSize="11"/>
                            </TextBlock>
                            <Button x:ConnectionId='35' Content="Zrušit načtený poukaz"
                                                                                     
                                    HorizontalAlignment="Stretch"
                                    Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Warning: Partial Usage (Forfeiture) -->
                    <Border x:ConnectionId='33' Background="#FFF3CD"
                            BorderBrush="#FF9500"
                            BorderThickness="2"
                            CornerRadius="8"
                            Padding="12"
                                                                                             >
                        <StackPanel Spacing="8">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE7BA;" Foreground="#FF9500" FontSize="20"/>
                                <TextBlock Text="Upozornění: Částečné využití" FontWeight="SemiBold" Foreground="#FF9500" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock TextWrapping="Wrap">
                                <Run Text="Hodnota poukazu je vyšší než celková částka košíku."/>
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap">
                                <Run Text="Zbývající částka"/>
                                <Run x:ConnectionId='34'                                                                 FontWeight="Bold"/>
                                <Run Text=" propadne a nelze ji použít v budoucnu."/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Cancel Last Receipt Warning -->
            <Border x:ConnectionId='27' Background="#FFF3CD"
                    BorderBrush="#FF9500"
                    BorderThickness="2"
                    CornerRadius="8"
                    Padding="16"
                                                                                     
                    Shadow="{ThemeResource CardShadow}">
                <StackPanel Spacing="12">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE7BA;" Foreground="#FF9500" FontSize="24"/>
                        <TextBlock Text="Poslední prodej můžete zrušit"
                                   FontWeight="SemiBold"
                                   FontSize="16"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Spacing="4">
                        <TextBlock TextWrapping="Wrap">
                            <Run Text="Účtenka č."/>
                            <Run x:ConnectionId='29'                                                                     FontWeight="Bold"/>
                            <Run Text=" • "/>
                            <Run x:ConnectionId='30'                                                                                FontWeight="Bold"/>
                            <Run Text=" • "/>
                            <Run x:ConnectionId='31'                                                                        />
                        </TextBlock>
                        <TextBlock Text="Produkty budou vráceny do skladu a částka odečtena z pokladny."
                                   FontSize="12"
                                   Foreground="#666666"
                                   TextWrapping="Wrap"/>
                    </StackPanel>

                    <Button x:ConnectionId='28' Content="Zrušit poslední prodej"
                                                                 
                            Background="#FF3B30"
                            Foreground="White"
                            HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Receipt area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Border Grid.Row="0" Style="{StaticResource CardBorderStyle}" Shadow="{ThemeResource CardShadow}">
                <Grid RowSpacing="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Účtenka" Style="{ThemeResource TitleTextBlockStyle}"/>
                    <ListView x:ConnectionId='7' Grid.Row="1"
                                                                                         
                                                                                                
                              SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate                               >
                                <Grid x:ConnectionId='13' ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Spacing="2">
                                        <TextBlock x:ConnectionId='15'                              FontWeight="Bold"/>
                                        <StackPanel>
                                            <TextBlock>
                                                <Run x:ConnectionId='24'                                               />
                                                <Run Text=" x "/>
                                                <Run x:ConnectionId='25'                                                                                     />
                                            </TextBlock>
                                            <!-- Show discount info if product has discount -->
                                            <StackPanel x:ConnectionId='16'                                                                                                         
                                                        Spacing="2">
                                                <TextBlock FontSize="12" 
                                                           Foreground="{ThemeResource AccentFillColorDefaultBrush}">
                                                    <Run Text="Původně:" FontStyle="Italic"/>
                                                    <Run x:ConnectionId='23'                                                                                             />
                                                </TextBlock>
                                                
                                                <!-- Product discount (automatic) -->
                                                <TextBlock x:ConnectionId='17'                                                                                                               
                                                           FontSize="11" 
                                                           Foreground="#4CAF50">
                                                    <Run Text="📦 Sleva produktu: " FontWeight="SemiBold"/>
                                                    <Run x:ConnectionId='22'                                                    />
                                                </TextBlock>
                                                
                                                <!-- Manual discount (additional) -->
                                                <TextBlock x:ConnectionId='18'                                                                                                              
                                                           FontSize="11" 
                                                           Foreground="#FF9500">
                                                    <Run Text="✋ Dodatečná sleva: " FontWeight="SemiBold"/>
                                                    <Run x:ConnectionId='21'                                                   />
                                                </TextBlock>
                                                
                                                <!-- Combined discount total -->
                                                <TextBlock x:ConnectionId='19'                                                                                                        
                                                           FontSize="11" 
                                                           Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                                           FontWeight="SemiBold">
                                                    <Run Text="💰 "/>
                                                    <Run x:ConnectionId='20'                                                     />
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                    <TextBlock x:ConnectionId='14' Grid.Column="1"                                                  FontWeight="SemiBold" VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    
                    <!-- Buttons for selected item -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
                        <Button x:ConnectionId='8'                                                       ToolTipService.ToolTip="Zvýšit množství vybrané položky">
                            <FontIcon Glyph="&#xE710;"/>
                        </Button>
                        <Button x:ConnectionId='9'                                                       ToolTipService.ToolTip="Snížit množství vybrané položky">
                            <FontIcon Glyph="&#xE738;"/>
                        </Button>
                        <Button x:ConnectionId='10'                                                         ToolTipService.ToolTip="Aplikovat slevu na vybranou položku" Background="{ThemeResource AccentFillColorDefaultBrush}" Foreground="White">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <FontIcon Glyph="&#xE7B8;" FontSize="14"/>
                                <TextBlock Text="Sleva" FontSize="12"/>
                            </StackPanel>
                        </Button>
                        <Button x:ConnectionId='11'                                                ToolTipService.ToolTip="Odebrat vybranou položku">
                            <FontIcon Glyph="&#xE74D;"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <StackPanel Grid.Row="1" Spacing="12" Margin="0,24,0,0">
                <StackPanel Spacing="4" HorizontalAlignment="Right">
                    <TextBlock x:ConnectionId='4'                                                                      Style="{ThemeResource BodyTextBlockStyle}" HorizontalAlignment="Right" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock x:ConnectionId='5'                                                                     Style="{ThemeResource BodyTextBlockStyle}" HorizontalAlignment="Right" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock x:ConnectionId='6'                                                            Style="{ThemeResource TitleTextBlockStyle}" HorizontalAlignment="Right"/>
                </StackPanel>
                <Button x:ConnectionId='2' Content="K Platbě"                              Style="{StaticResource PrimaryButtonStyle}" HorizontalAlignment="Stretch"/>
                <Button x:ConnectionId='3' Content="Smazat účtenku"                                  HorizontalAlignment="Stretch"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>

