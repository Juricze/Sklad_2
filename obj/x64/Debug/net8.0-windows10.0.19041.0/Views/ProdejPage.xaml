<Page x:ConnectionId='1'
    x:Class="Sklad_2.Views.ProdejPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Sklad_2.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid Padding="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="360"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="1" Style="{StaticResource CardBorderStyle}" Shadow="{ThemeResource CardShadow}">
            <ListView x:ConnectionId='8' Header="Účtenka"                                              >
                <ListView.ItemTemplate>
                    <DataTemplate                            >
                        <StackPanel x:ConnectionId='10' Orientation="Horizontal" Spacing="12">
                            <TextBlock x:ConnectionId='11'                      FontWeight="Bold"/>
                            <TextBlock x:ConnectionId='12'                          />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>
        <StackPanel Grid.Column="0" Margin="0,0,24,0" Spacing="24">
            <Border Style="{StaticResource CardBorderStyle}" Shadow="{ThemeResource CardShadow}">
                <TextBox x:ConnectionId='7' x:Name="EanTextBox" Header="EAN kód produktu" PlaceholderText="Naskenujte nebo zadejte kód..."                             />
            </Border>
            <Border x:ConnectionId='2' Style="{StaticResource CardBorderStyle}" Shadow="{ThemeResource CardShadow}"                                                            >
                <StackPanel Spacing="12">
                    <TextBlock Text="Nalezený produkt" Style="{ThemeResource TitleTextBlockStyle}"/>
                    <TextBlock x:ConnectionId='3'                                                           />
                    <TextBlock x:ConnectionId='4'                                                                />
                    <TextBlock x:ConnectionId='5'                                                                    />
                    <Button x:ConnectionId='6' Content="Přidat na účtenku"                                                  HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>

