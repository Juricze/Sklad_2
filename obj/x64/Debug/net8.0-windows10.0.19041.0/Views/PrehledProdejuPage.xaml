<Page x:ConnectionId='1'
    x:Class="Sklad_2.Views.PrehledProdejuPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Sklad_2.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="24" RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Přehled prodejů" Style="{ThemeResource TitleTextBlockStyle}"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="12" Margin="0,12,0,12">
            <DatePicker x:ConnectionId='12' Header="Od data"                                                 />
            <DatePicker x:ConnectionId='13' Header="Do data"                                               />
            <Button x:ConnectionId='14' Content="Filtrovat" VerticalAlignment="Bottom" Style="{StaticResource PrimaryButtonStyle}"                                                  />
        </StackPanel>

        <Grid Grid.Row="2" ColumnSpacing="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <ListView x:ConnectionId='2' Grid.Column="0"                                                    >
                <ListView.HeaderTemplate>
                    <DataTemplate>
                        <Grid Padding="12" Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Datum" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Text="Celkem" FontWeight="Bold"/>
                            <TextBlock Grid.Column="2" Text="Platba" FontWeight="Bold"/>
                        </Grid>
                    </DataTemplate>
                </ListView.HeaderTemplate>
                <ListView.ItemTemplate>
                    <DataTemplate                            >
                        <Grid x:ConnectionId='8' Padding="12" ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:ConnectionId='9' Grid.Column="0"                                   VerticalAlignment="Center"/>
                            <TextBlock x:ConnectionId='10' Grid.Column="1"                                      VerticalAlignment="Center"/>
                            <TextBlock x:ConnectionId='11' Grid.Column="2"                               VerticalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackPanel Grid.Column="1" Spacing="12">
                <Border Style="{StaticResource CardBorderStyle}" Shadow="{ThemeResource CardShadow}">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Celkový přehled" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                        <TextBlock>
                            <Run Text="Počet účtenek:" FontWeight="Bold"/>
                            <Run x:ConnectionId='5'                                                        />
                        </TextBlock>
                        <TextBlock>
                            <Run Text="Celkem s DPH:" FontWeight="Bold"/>
                            <Run x:ConnectionId='4'                                                        />
                        </TextBlock>
                        <TextBlock>
                            <Run Text="Celkem DPH:" FontWeight="Bold"/>
                            <Run x:ConnectionId='3'                                                      />
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Page>

