<Page x:ConnectionId='1'
    x:Class="Sklad_2.Views.PrehledProdejuPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Sklad_2.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style x:Key="KpiCardStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FFFFFF" Offset="0"/>
                        <GradientStop Color="#F5F5F5" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="KpiIconStyle" TargetType="FontIcon">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="Foreground" Value="#007AFF"/>
        </Style>
    </Page.Resources>

    <ScrollViewer>
        <Grid Padding="24" RowSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Spacing="16">
                <TextBlock Text="📊 Přehled prodejů" Style="{ThemeResource TitleTextBlockStyle}" FontWeight="Bold"/>

                <!-- Filter Buttons -->
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <RadioButton x:ConnectionId='37' Content="Celkem"
                                                                                                                                                                      
                                                                              
                                 CommandParameter="All"
                                 Style="{StaticResource ToggleButtonStyle}"/>
                    <RadioButton x:ConnectionId='38' Content="Dnešní"
                                                                                                                                                                        
                                                                              
                                 CommandParameter="Daily"
                                 Style="{StaticResource ToggleButtonStyle}"/>
                    <RadioButton x:ConnectionId='39' Content="Týdenní"
                                                                                                                                                                         
                                                                              
                                 CommandParameter="Weekly"
                                 Style="{StaticResource ToggleButtonStyle}"/>
                    <RadioButton x:ConnectionId='40' Content="Měsíční"
                                                                                                                                                                          
                                                                              
                                 CommandParameter="Monthly"
                                 Style="{StaticResource ToggleButtonStyle}"/>
                    <RadioButton x:ConnectionId='41' Content="Vlastní"
                                                                                                                                                                         
                                                                              
                                 CommandParameter="Custom"
                                 Style="{StaticResource ToggleButtonStyle}"/>
                </StackPanel>

                <!-- Custom Date Range -->
                <StackPanel x:ConnectionId='33' Orientation="Horizontal" Spacing="12"
                                                                                                                                                                        >
                    <DatePicker x:ConnectionId='34' Header="Od"                                                 />
                    <DatePicker x:ConnectionId='35' Header="Do"                                               />
                    <Button x:ConnectionId='36' Content="Načíst data" VerticalAlignment="Bottom"                                                   Style="{StaticResource AccentButtonStyle}"/>
                </StackPanel>
            </StackPanel>

            <!-- KPI Cards -->
            <Grid Grid.Row="1" ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Sales -->
                <Border Grid.Column="0" Style="{StaticResource KpiCardStyle}">
                    <StackPanel Spacing="8">
                        <FontIcon Glyph="&#xE7BF;" Style="{StaticResource KpiIconStyle}"/>
                        <TextBlock Text="Celkové tržby" Style="{ThemeResource CaptionTextBlockStyle}" Foreground="#666666"/>
                        <TextBlock x:ConnectionId='31'                                                                  Style="{ThemeResource TitleTextBlockStyle}" FontWeight="Bold" Foreground="#007AFF"/>
                        <TextBlock Style="{ThemeResource CaptionTextBlockStyle}" Foreground="#999999">
                            <Run x:ConnectionId='32'                                                        />
                            <Run Text=" účtenek"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Average Sale -->
                <Border Grid.Column="1" Style="{StaticResource KpiCardStyle}">
                    <StackPanel Spacing="8">
                        <FontIcon Glyph="&#xE8A1;" Style="{StaticResource KpiIconStyle}" Foreground="#34C759"/>
                        <TextBlock Text="Průměrný prodej" Style="{ThemeResource CaptionTextBlockStyle}" Foreground="#666666"/>
                        <TextBlock x:ConnectionId='30'                                                                   Style="{ThemeResource TitleTextBlockStyle}" FontWeight="Bold" Foreground="#34C759"/>
                        <TextBlock Text="na účtenku" Style="{ThemeResource CaptionTextBlockStyle}" Foreground="#999999"/>
                    </StackPanel>
                </Border>

                <!-- VAT Amount -->
                <Border Grid.Column="2" Style="{StaticResource KpiCardStyle}">
                    <StackPanel Spacing="8">
                        <FontIcon Glyph="&#xE8A9;" Style="{StaticResource KpiIconStyle}" Foreground="#FF9500"/>
                        <TextBlock Text="Celkem DPH" Style="{ThemeResource CaptionTextBlockStyle}" Foreground="#666666"/>
                        <TextBlock x:ConnectionId='28'                                                                Style="{ThemeResource TitleTextBlockStyle}" FontWeight="Bold" Foreground="#FF9500"/>
                        <TextBlock x:ConnectionId='29'                                                                            Style="{ThemeResource CaptionTextBlockStyle}" Foreground="#999999"/>
                    </StackPanel>
                </Border>

                <!-- Net Amount -->
                <Border Grid.Column="3" Style="{StaticResource KpiCardStyle}">
                    <StackPanel Spacing="8">
                        <FontIcon Glyph="&#xE7C3;" Style="{StaticResource KpiIconStyle}" Foreground="#AF52DE"/>
                        <TextBlock Text="Bez DPH" Style="{ThemeResource CaptionTextBlockStyle}" Foreground="#666666"/>
                        <TextBlock x:ConnectionId='27'                                                                            Style="{ThemeResource TitleTextBlockStyle}" FontWeight="Bold" Foreground="#AF52DE"/>
                        <TextBlock Text="čistá tržba" Style="{ThemeResource CaptionTextBlockStyle}" Foreground="#999999"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Quick Stats -->
            <Grid Grid.Row="2" ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource CardBorderStyle}" Padding="20">
                    <StackPanel Spacing="12">
                        <TextBlock Text="📅 Denní průměr" Style="{ThemeResource SubtitleTextBlockStyle}" FontWeight="SemiBold"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <FontIcon Grid.Column="0" Glyph="&#xE787;" FontSize="48" Foreground="#007AFF" Margin="0,0,16,0"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock x:ConnectionId='26'                                                                    Style="{ThemeResource TitleTextBlockStyle}" FontWeight="Bold" Foreground="#007AFF"/>
                                <TextBlock Text="průměrně denně" Style="{ThemeResource CaptionTextBlockStyle}" Foreground="#999999"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource CardBorderStyle}" Padding="20">
                    <StackPanel Spacing="12">
                        <TextBlock Text="📄 Počet účtenek" Style="{ThemeResource SubtitleTextBlockStyle}" FontWeight="SemiBold"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <FontIcon Grid.Column="0" Glyph="&#xE8A1;" FontSize="48" Foreground="#34C759" Margin="0,0,16,0"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock x:ConnectionId='25'                                                         Style="{ThemeResource TitleTextBlockStyle}" FontWeight="Bold" Foreground="#34C759"/>
                                <TextBlock Text="celkem prodejů" Style="{ThemeResource CaptionTextBlockStyle}" Foreground="#999999"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource CardBorderStyle}" Padding="20">
                    <StackPanel Spacing="12">
                        <TextBlock Text="💰 DPH Info" Style="{ThemeResource SubtitleTextBlockStyle}" FontWeight="SemiBold"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <FontIcon Grid.Column="0" Glyph="&#xE8A9;" FontSize="48" Foreground="#FF9500" Margin="0,0,16,0"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock x:ConnectionId='24'                                                                Style="{ThemeResource TitleTextBlockStyle}" FontWeight="Bold" Foreground="#FF9500"/>
                                <TextBlock Text="celkem DPH" Style="{ThemeResource CaptionTextBlockStyle}" Foreground="#999999"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Products and Payment Methods -->
            <Grid Grid.Row="3" ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Top Products -->
                <Border Grid.Column="0" Style="{StaticResource CardBorderStyle}" Padding="20">
                    <StackPanel Spacing="16">
                        <TextBlock Text="🏆 Top 5 produktů" Style="{ThemeResource SubtitleTextBlockStyle}" FontWeight="SemiBold"/>
                        <ListView x:ConnectionId='17'                                                          
                                  SelectionMode="None"
                                  IsItemClickEnabled="False">
                            <ListView.ItemTemplate>
                                <DataTemplate                               >
                                    <Grid x:ConnectionId='19' Margin="0,8,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Spacing="4">
                                            <TextBlock x:ConnectionId='21'                             FontWeight="SemiBold"/>
                                            <ProgressBar x:ConnectionId='22'                                    Maximum="100" Foreground="#34C759" Height="4"/>
                                            <TextBlock Style="{ThemeResource CaptionTextBlockStyle}" Foreground="#999999">
                                                <Run x:ConnectionId='23'                             />
                                                <Run Text=" ks"/>
                                            </TextBlock>
                                        </StackPanel>
                                        <TextBlock x:ConnectionId='20' Grid.Column="1"                                  FontWeight="Bold" Foreground="#34C759" VerticalAlignment="Center" Margin="12,0,0,0"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>

                <!-- Worst Products -->
                <Border Grid.Column="1" Style="{StaticResource CardBorderStyle}" Padding="20">
                    <StackPanel Spacing="16">
                        <TextBlock Text="📉 Nejméně prodávané" Style="{ThemeResource SubtitleTextBlockStyle}" FontWeight="SemiBold"/>
                        <ListView x:ConnectionId='10'                                                            
                                  SelectionMode="None"
                                  IsItemClickEnabled="False">
                            <ListView.ItemTemplate>
                                <DataTemplate                               >
                                    <Grid x:ConnectionId='12' Margin="0,8,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Spacing="4">
                                            <TextBlock x:ConnectionId='14'                             FontWeight="SemiBold"/>
                                            <ProgressBar x:ConnectionId='15'                                    Maximum="100" Foreground="#FF3B30" Height="4"/>
                                            <TextBlock Style="{ThemeResource CaptionTextBlockStyle}" Foreground="#999999">
                                                <Run x:ConnectionId='16'                             />
                                                <Run Text=" ks"/>
                                            </TextBlock>
                                        </StackPanel>
                                        <TextBlock x:ConnectionId='13' Grid.Column="1"                                  FontWeight="Bold" Foreground="#FF3B30" VerticalAlignment="Center" Margin="12,0,0,0"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>

                <!-- Payment Methods -->
                <Border Grid.Column="2" Style="{StaticResource CardBorderStyle}" Padding="20">
                    <StackPanel Spacing="16">
                        <TextBlock Text="💳 Platební metody" Style="{ThemeResource SubtitleTextBlockStyle}" FontWeight="SemiBold"/>
                        <ListView x:ConnectionId='2'                                                                 
                                  SelectionMode="None"
                                  IsItemClickEnabled="False">
                            <ListView.ItemTemplate>
                                <DataTemplate                                       >
                                    <Grid x:ConnectionId='4' Margin="0,8,0,8">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock x:ConnectionId='8' Grid.Column="0"                               FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="1" Style="{ThemeResource CaptionTextBlockStyle}" Foreground="#999999">
                                                <Run x:ConnectionId='9'                                    />
                                                <Run Text="%"/>
                                            </TextBlock>
                                        </Grid>
                                        <ProgressBar x:ConnectionId='5' Grid.Row="1"                             Maximum="100" Foreground="#007AFF" Height="4" Margin="0,4,0,4"/>
                                        <Grid Grid.Row="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Style="{ThemeResource CaptionTextBlockStyle}" Foreground="#999999">
                                                <Run x:ConnectionId='7'                      />
                                                <Run Text=" transakcí"/>
                                            </TextBlock>
                                            <TextBlock x:ConnectionId='6' Grid.Column="1"                                 FontWeight="Bold" Foreground="#007AFF"/>
                                        </Grid>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>

