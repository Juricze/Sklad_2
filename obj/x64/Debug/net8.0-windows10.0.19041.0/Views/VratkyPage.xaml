<Page x:ConnectionId='1'
    x:Name="page"
    x:Class="Sklad_2.Views.VratkyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:Sklad_2.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="24" RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Search Section -->
        <StackPanel Grid.Row="0" Spacing="12" MaxWidth="400">
            <TextBlock Text="Vytvoření vratky" Style="{ThemeResource TitleTextBlockStyle}"/>
            <TextBox x:ConnectionId='15' Header="Zadejte číslo původní účtenky" 
                                                                                                                  
                                                       />
            <Button x:ConnectionId='16' Content="Najít účtenku" 
                                                                    
                    Style="{StaticResource PrimaryButtonStyle}"/>
            <TextBlock x:ConnectionId='17'                                                      Foreground="Red"/>
        </StackPanel>

        <!-- Return Processing Section (Visible when receipt is found) -->
        <Grid x:ConnectionId='2' Grid.Row="1" Margin="0,24,0,0"
                                                                         
              RowSpacing="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Style="{ThemeResource SubtitleTextBlockStyle}">
                <Run Text="Položky na účtence č."/>
                <Run x:ConnectionId='14'                                                              />
            </TextBlock>

            <ListView x:ConnectionId='3' Grid.Row="1"                                                             SelectionMode="None">
                <ListView.HeaderTemplate>
                    <DataTemplate>
                        <Grid Padding="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Produkt" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Text="Původní množství" FontWeight="Bold" Margin="12,0" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="Množství k vrácení" FontWeight="Bold" Margin="12,0" HorizontalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </ListView.HeaderTemplate>
                <ListView.ItemTemplate>
                    <DataTemplate                                            >
                        <Grid x:ConnectionId='10' ColumnSpacing="12" Padding="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:ConnectionId='11' Grid.Column="0"                                          VerticalAlignment="Center"/>
                            <TextBlock x:ConnectionId='12' Grid.Column="1"                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <NumberBox x:ConnectionId='13' Grid.Column="2"
                                                                                                                        
                                       Minimum="0"
                                                                           
                                       SpinButtonPlacementMode="Compact"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackPanel Grid.Row="2" Spacing="12" HorizontalAlignment="Right" Margin="0,12,0,0">
                <StackPanel Spacing="4" HorizontalAlignment="Right">
                    <TextBlock x:ConnectionId='5'                                                                             Style="{ThemeResource BodyTextBlockStyle}" HorizontalAlignment="Right" Foreground="{ThemeResource TextFillColorSecondaryBrush}"                                                                                                                 />
                    <TextBlock x:ConnectionId='6'                                                                      Style="{ThemeResource BodyTextBlockStyle}" HorizontalAlignment="Right" Foreground="{ThemeResource TextFillColorSecondaryBrush}"                                                                                                                 />
                    <TextBlock x:ConnectionId='7'                                                                   Style="{ThemeResource TitleTextBlockStyle}" HorizontalAlignment="Right"/>
                </StackPanel>
                <Button x:ConnectionId='4' Content="Dokončit vratku"
                                                         
                        Style="{StaticResource PrimaryButtonStyle}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>

