<Page x:ConnectionId='1'
    x:Class="Sklad_2.Views.NaskladneniPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid Padding="24">
        <StackPanel Spacing="24">
            <Border Style="{StaticResource CardBorderStyle}" Shadow="{ThemeResource CardShadow}" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                <StackPanel Spacing="12">
                    <TextBox x:ConnectionId='4' Header="EAN kód"                                           />
                    <TextBox x:ConnectionId='5' Header="Název produktu"                                            />
                    <TextBox x:ConnectionId='6' Header="Prodejní cena"                                                 />
                    <TextBox x:ConnectionId='7' Header="Počet kusů skladem"                                                     />
                </StackPanel>
            </Border>
            <TextBlock x:ConnectionId='2'                                                      Margin="0,12,0,0" Foreground="{ThemeResource SystemAccentColor}" TextWrapping="Wrap"/>
            <Button x:ConnectionId='3' Content="Přidat do databáze" Style="{StaticResource PrimaryButtonStyle}" HorizontalAlignment="Stretch"                                               />
        </StackPanel>
    </Grid>
</Page>

