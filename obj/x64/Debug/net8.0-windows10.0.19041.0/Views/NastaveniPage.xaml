<Page x:ConnectionId='1'
    x:Class="Sklad_2.Views.NastaveniPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <ScrollViewer>
        <StackPanel Spacing="24" Padding="24">
            <!-- Firemní údaje -->
            <Border Style="{StaticResource CardBorderStyle}" Shadow="{ThemeResource CardShadow}">
                <StackPanel Spacing="12">
                    <TextBlock Text="Firemní údaje" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                    <TextBox x:ConnectionId='11' Header="Název obchodu"                                                         />
                    <TextBox x:ConnectionId='12' Header="Adresa"                                                            />
                    <TextBox x:ConnectionId='13' Header="IČ"                                                          />
                    <TextBox x:ConnectionId='14' Header="DIČ"                                                      />
                    <ToggleSwitch x:ConnectionId='15' Header="Plátce DPH"                                                           />
                </StackPanel>
            </Border>

            <!-- Nastavení tiskárny -->
            <Border Style="{StaticResource CardBorderStyle}" Shadow="{ThemeResource CardShadow}">
                <StackPanel Spacing="12">
                    <TextBlock Text="Nastavení tiskárny" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                    <TextBox x:ConnectionId='8' Header="Cesta k tiskárně (např. \\server\tiskarna)"                                                                                                 />
                    <Button x:ConnectionId='9' Content="Test tisku"                                               Style="{StaticResource PrimaryButtonStyle}"/>
                    <TextBlock x:ConnectionId='10'                                                               TextWrapping="Wrap" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                </StackPanel>
            </Border>

            <!-- Uložit nastavení -->
            <StackPanel Spacing="12">
                <Button x:ConnectionId='6' Content="Uložit všechna nastavení"                                                  Style="{StaticResource PrimaryButtonStyle}" HorizontalAlignment="Stretch"/>
                <TextBlock x:ConnectionId='7'                                                          TextWrapping="Wrap" FontWeight="Bold" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
            </StackPanel>

            <!-- Správa databáze -->
            <Border Style="{StaticResource CardBorderStyle}" Shadow="{ThemeResource CardShadow}">
                <StackPanel Spacing="12">
                    <TextBlock Text="Správa databáze" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                    <Button x:ConnectionId='4' Content="Zálohovat databázi"                                                   />
                    <TextBlock x:ConnectionId='5'                                                            TextWrapping="Wrap" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                </StackPanel>
            </Border>

            <!-- O aplikaci -->
            <Border Style="{StaticResource CardBorderStyle}" Shadow="{ThemeResource CardShadow}">
                <StackPanel Spacing="12">
                    <TextBlock Text="O aplikaci" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                    <TextBlock>
                        <Run Text="Verze:" FontWeight="Bold"/>
                        <Run x:ConnectionId='3'                                                  />
                    </TextBlock>
                    <TextBlock>
                        <Run Text="GitHub:" FontWeight="Bold"/>
                        <Run x:ConnectionId='2'                                                  />
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>

