<Page x:ConnectionId='1'
    x:Class="Sklad_2.Views.NastaveniPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid Padding="24">
        <StackPanel Spacing="24">
            <!-- Nastavení tématu -->

            <!-- Zálohování databáze -->
            <Border Style="{StaticResource CardBorderStyle}" Shadow="{ThemeResource CardShadow}">
                <StackPanel Spacing="12">
                    <TextBlock Text="Správa databáze" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                    <Button x:ConnectionId='4' Content="Zálohovat databázi"                                                    Style="{StaticResource PrimaryButtonStyle}"/>
                    <TextBlock x:ConnectionId='5'                                                            TextWrapping="Wrap" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                </StackPanel>
            </Border>

            <!-- O aplikaci -->
            <Border Style="{StaticResource CardBorderStyle}" Shadow="{ThemeResource CardShadow}">
                <StackPanel Spacing="12">
                    <TextBlock Text="O aplikaci" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                    <TextBlock>
                        <Run Text="Verze:" FontWeight="Bold"/>
                        <Run x:ConnectionId='3'                                                  />
                    </TextBlock>
                    <TextBlock>
                        <Run Text="GitHub:" FontWeight="Bold"/>
                        <Run x:ConnectionId='2'                                                  />
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>

