<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="LuxuryBackground" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="LuxurySurface" Color="#F9F9F9"/>
            <SolidColorBrush x:Key="LuxuryTextPrimary" Color="#000000"/>
            <SolidColorBrush x:Key="LuxuryTextSecondary" Color="#6B6B6B"/>
            <SolidColorBrush x:Key="LuxuryAccent" Color="#1A1A1A"/>
            <SolidColorBrush x:Key="LuxuryBorder" Color="#E0E0E0"/>
            <ThemeShadow x:Key="CardShadow" />
        </ResourceDictionary>
        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="LuxuryBackground" Color="#0A0A0A"/>
            <SolidColorBrush x:Key="LuxurySurface" Color="#121212"/>
            <SolidColorBrush x:Key="LuxuryTextPrimary" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="LuxuryTextSecondary" Color="#A0A0A0"/>
            <SolidColorBrush x:Key="LuxuryAccent" Color="#F0F0F0"/>
            <SolidColorBrush x:Key="LuxuryBorder" Color="#2C2C2C"/>
            <ThemeShadow x:Key="CardShadow" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>
